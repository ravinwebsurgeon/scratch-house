{% comment %}
  Banner Video Section with Frame
{% endcomment %}

<section class="banner-video-section">
  <div class="video-frame">
    
    <!-- Video Background -->
    <div class="about-under-video">
    <div class="video-wrapper">
         {% if section.settings.video != blank %}
            {{ section.settings.video | video_tag: 
            controls: false, 
        autoplay: true, 
        muted: true, 
        loop: true
            }}
          {% endif %}
    </div>
  </div>

    <!-- Overlay Content -->
    <div class="video-overlay">
      {% if section.settings.subheading != blank %}
        <p class="subheading">{{ section.settings.subheading }}</p>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h2 class="heading">{{ section.settings.heading }}</h2>
      {% endif %}
    </div>

  </div>
</section>

<style>

  .about-under-video .video-wrapper video {
    width: 100%;
    max-width: 100%;
    display: block;
    height: 100%;
}

.banner-video-section {
  display: flex;
  justify-content: center;
  {% comment %} margin: 60px 0; {% endcomment %}
  background: #000000;
    padding: 40px 0px;
}

/* Overlay content */

.video-overlay .subheading {
  font-size: 18px;
  font-weight: 400;
  letter-spacing: 1px;
  margin-bottom: 8px;
}

.video-overlay .heading {
  font-size: 36px;
  font-weight: 700;
  margin: 0;
  color: #ffffff;
}
</style>

{% schema %}
{
  "name": "about video section",
  "settings": [
    {
          "type": "video",
          "id": "video",
          "label": "Upload Video"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover Something New"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      
    }
  ],
  "presets": [
    {
      "name": "about video section"
    }
  ]
}
{% endschema %}
