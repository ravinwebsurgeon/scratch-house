<div class="comparison-section">
  <!-- CHEESE TABLE -->
  <div class="comparison-table cheese-table">
    <h2>{{ section.settings.title_cheese }}</h2>
    <div class="table-header">
      <div>Feature</div>
      <div>Scratch Cheese</div>
      <div>Dairy Cheese</div>
      <div>Other Plant Cheese</div>
    </div>
    {% for block in section.blocks %}
      {% if block.type == 'cheese_item' %}
      <div class="table-row">
        <div>{{ block.settings.feature }}</div>
        <div>{% if block.settings.scratch %}✔{% endif %}</div>
        <div>{% if block.settings.dairy %}✔{% endif %}</div>
        <div>{% if block.settings.other_plant %}✔{% endif %}</div>
      </div>
      {% endif %}
    {% endfor %}
  </div>

  <!-- MEAT TABLE -->
  <div class="comparison-table meat-table">
    <h2>{{ section.settings.title_meat }}</h2>
    <div class="table-header">
      <div>Feature</div>
      <div>Scratch Meat</div>
      <div>Other Plant Meat</div>
    </div>
    {% for block in section.blocks %}
      {% if block.type == 'meat_item' %}
      <div class="table-row">
        <div>{{ block.settings.feature }}</div>
        <div>
  {% if block.settings.scratch %}
    <!-- If correct -->
    <span style="color: green;">✔</span>
  {% else %}
    <!-- If wrong -->
    <span style="color: red;">❌</span>
  {% endif %}
</div>

<div>
  {% if block.settings.other_plant %}
    <!-- If correct -->
    <span style="color: green;">✔</span>
  {% else %}
    <!-- If wrong -->
    <span style="color: red;">❌</span>
  {% endif %}
</div>
      </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>

    .comparison-section {
  display: flex;
  gap: 40px;
  flex-wrap: wrap;
}

.comparison-table {
  background: #1c1c1c;
  color: #fff;
  border-radius: 12px;
  overflow: hidden;
  flex: 1;
  min-width: 300px;
}

.comparison-table h2 {
  background: #ff6600;
  padding: 12px 20px;
  margin: 0;
  font-size: 18px;
  font-weight: bold;
  text-align: center;
}

.table-header, .table-row {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
  padding: 10px 20px;
  border-bottom: 1px solid #333;
  text-align: center;
}

.table-header {
  font-weight: bold;
  background: #333;
}

.table-row:nth-child(even) {
  background: #222;
}

.table-row div {
  padding: 8px 5px;
}


</style>

{% schema %}
{
  "name": "Comparison Table",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title_cheese",
      "label": "Cheese Table Title",
      "default": "Scratch Cheese vs Other Cheese"
    },
    {
      "type": "text",
      "id": "title_meat",
      "label": "Meat Table Title",
      "default": "Scratch Meat vs Other Meat"
    }
  ],
  "blocks": [
    {
      "type": "cheese_item",
      "name": "Cheese Item",
      "settings": [
        { "type": "text", "id": "feature", "label": "Feature" },
        { "type": "checkbox", "id": "scratch", "label": "Scratch Cheese" },
        { "type": "checkbox", "id": "dairy", "label": "Dairy Cheese" },
        { "type": "checkbox", "id": "other_plant", "label": "Other Plant Cheese" }
      ]
    },
    {
      "type": "meat_item",
      "name": "Meat Item",
      "settings": [
        { "type": "text", "id": "feature", "label": "Feature" },
        { "type": "checkbox", "id": "scratch", "label": "Scratch Meat" },
        { "type": "checkbox", "id": "other_plant", "label": "Other Plant Meat" }
      ]
    }
  ],
  "max_blocks": 50,
  "presets": [
    {
      "name": "Comparison Table",
      "category": "Custom"
    }
  ]
}
{% endschema %}
