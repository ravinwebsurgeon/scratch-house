<!-- testimonials.liquid -->
<section class="testimonial-section">
  <div class="testimonial-wrapper">
    <div class="testimonial-track">
      {% for block in section.blocks %}
        <div class="testimonial-item" {{ block.shopify_attributes }}>
          <div class="testimonial-stars">
            {% for i in (1..block.settings.stars) %}
              ★
            {% endfor %}
          </div>
          <p>{{ block.settings.quote }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.testimonial-section {
  overflow: hidden;
  background: #fff;
  padding: 20px 0;
}

.testimonial-wrapper {
  display: flex;
  width: 100%;
}

.testimonial-track {
  display: flex;
  animation: scroll-left 40s linear infinite;
}

.testimonial-item {
  flex: 0 0 auto;
  min-width: 300px;
  margin: 0 20px;
  text-align: center;
  font-size: 16px;
  color: #333;
}

.testimonial-item .stars {
  color: gold;
  margin-bottom: 8px;
}

@keyframes scroll-left {
  from { transform: translateX(0); }
  to { transform: translateX(-50%); }
}

/* ✅ prevent pause on hover */
.testimonial-track:hover {
  animation-play-state: running;
}

.testimonial-track:hover {
  animation-play-state: paused;
}

</style>

{% schema %}
{
  "name": "Testimonials Scroller",
  "settings": [],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Testimonial Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials Scroller",
      "category": "Custom"
    }
  ]
}
{% endschema %}