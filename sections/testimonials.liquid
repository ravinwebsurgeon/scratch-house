<!-- testimonials.liquid -->
<section class="testimonial-section">
  <div class="testimonial-wrapper">
    <div class="testimonial-track">
      {% for block in section.blocks %}
        <div class="testimonial-item" {{ block.shopify_attributes }}>
          <div class="testimonial-stars">
            {% for i in (1..block.settings.stars) %}
              ★
            {% endfor %}
          </div>
          <div class="testimonial-description">
          <p>{{ block.settings.quote }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>

    section.testimonial-section .testimonial-description p {
    margin: 6px 0 0;
    font-family: Oswald;
    font-weight: 300;
    font-size: 24px;
    line-height: 30px;
    text-align: center;
    text-transform: capitalize;
    max-width: 420px;
    color: #343434;
}

section.testimonial-section .testimonial-stars {
    color: #FFD700;
    font-size: 19px;
    line-height: 20px;
}

section.testimonial-section {
    background-color: #F5F5F5;
    padding: 34px 0;
    overflow: hidden;
}

.testimonial-wrapper {
  display: flex;
  width: 100%;
}

.testimonial-track {
  display: flex;
  animation: scroll-left 30s linear infinite;
}

.testimonial-item {
  flex: 0 0 auto;
  margin: 0 20px;
  text-align: center;
  font-size: 16px; 
}

.testimonial-item .stars {
  color: gold;
  margin-bottom: 8px;
}

@keyframes scroll-left {
  from { transform: translateX(0); }
  to { transform: translateX(-50%); }
}

/* ✅ prevent pause on hover */
.testimonial-track:hover {
  animation-play-state: running;
}

.testimonial-track:hover {
  animation-play-state: paused;
}

</style>

{% schema %}
{
  "name": "Testimonials Scroller",
  "settings": [],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
         {
          "type": "range",
          "id": "stars",
          "label": "Star Rating",
          "min": 1,
          "max": 5,
          "default": 5
        },
        {
          "type": "textarea",
          "id": "quote",
          "label": "Testimonial Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials Scroller",
      "category": "Custom"
    }
  ]
}
{% endschema %}