<section class="split-banner-section-alt">
  <div class="split-banner-inner-alt">
    <!-- Left Text -->
    <div class="split-banner-content-alt">
      {% if section.settings.heading != blank %}
        <h2 class="split-heading-alt">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <p class="split-text-alt">{{ section.settings.text }}</p>
      {% endif %}
    </div>

    <!-- Right Image -->
    <div class="split-bann-sec">
    <div class="split-banner-image-alt">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | img_url:'master' }}" alt="Banner Image">
      {% endif %}
    </div>
  </div>
  </div>
</section>

<style>
.split-banner-section-alt {
  width: 100%;
}

.split-banner-inner-alt {
  display: flex;
  align-items: center;
  background-color: #343434;
}

.split-banner-image-alt img {
    display: block;
    width: 100%;
    max-width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    object-fit: cover;
}

.split-banner-inner > div {
    width: 50%;
    max-width: 50%;
}

.split-banner-content-alt {
    padding: 20px 70px;
    display: flex;
    flex-direction: column;
    gap: 25px;
}

.split-banner-image-alt {
    position: relative;
    padding-bottom: 700px;
}

.split-heading-alt {
    color: #fff;
    margin: 0;
    font-family: Oswald;
    font-weight: 700;
    font-size: 40px;
    line-height: 50px;
    text-transform: uppercase;
}

.split-text-alt {
    font-family: Oswald;
    font-weight: 300;
    font-size: 20px;
    line-height: 30px;
    color: #fff;
    margin: 0;
    max-width: 700px;
}

.split-banner-inner-alt > div {
    width: 50%;
    max-width: 50%;
}

</style>

{% schema %}
{
  "name": "Split Section (Reversed)",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Right Side Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "BKIND"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "At BKIND, we offer all-natural, plant-based, vegan, eco-friendly beauty and skin care products..."
    }
  ],
  "presets": [
    {
      "name": "Split section (Reversed)",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
