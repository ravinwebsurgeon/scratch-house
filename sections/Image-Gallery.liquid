<script>
document.addEventListener("DOMContentLoaded", function() {
  // Responsive gallery slider
  function initGallerySlider() {
    if (window.innerWidth <= 767) {
      if (!$('.responsive-gallery').hasClass('slick-initialized')) {
        $('.responsive-gallery').slick({
          slidesToShow: 1,
          autoplay: true,
          dots: true,
          arrows: false,
          infinite: true,
          centerMode: true,
          centerPadding: '20px'
        });
      }
    } else {
      if ($('.responsive-gallery').hasClass('slick-initialized')) {
        $('.responsive-gallery').slick('unslick');
      }
    }
  }
  initGallerySlider();
  window.addEventListener('resize', initGallerySlider);

  // Popup slider init
  $('.popup-slider').slick({
    slidesToShow: 1,
    infinite: true,
    arrows: true,
    dots: false
  });

  // Open popup on image click
  $('.popup-trigger').on('click', function() {
    const index = $(this).data('index');
    $('#gallery-popup').addClass('open');
     $('body').addClass('opens');
    $('.popup-slider').slick('slickGoTo', index);
  });

  // Close popup
  $('.popup-close, #gallery-popup').on('click', function(e) {
    if (e.target.id === 'gallery-popup' || e.target.classList.contains('popup-close')) {
      $('#gallery-popup').removeClass('open');
      $('body').removeClass('opens'); 
    }
  });
});
</script>

<style>
.expanding-gallery {
  padding: 60px 0;
}

.expanding-gallery .page-width {
  max-width: 100%;
  margin: 0 auto;
  padding: 0 20px;
}

/* Heading */
.expanding-gallery .all-links-header .line-title {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15px;
  margin-bottom: 40px;
}

.expanding-gallery .all-links-header .line-title hr {
  width: 100px;
  background-color: #F76E2A;
  border: none;
  height: 3px;
}

.expanding-gallery .all-links-title {
  font-family: Oswald, sans-serif;
  font-weight: 700;
  font-size: 60px;
  text-transform: uppercase;
  color: #343434;
  margin: 0;
  text-align: center;
}

/* Gallery Grid */
.expanding-gallery .gallery {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
}

.gallery-item {
  overflow: hidden;
  border-radius: 16px;
  transition: transform 0.3s ease;
  box-shadow: 0 4px 15px rgba(0,0,0,0.08);
}

.gallery-item img {
 width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 16px;
    transition: transform 0.4s ease;
    cursor: pointer;
    aspect-ratio: 1;
}

.gallery-item:hover img {
  transform: scale(1.08);
}

.gallery-popup.open:after{
    position: fixed;
    background: rgba(0, 0, 0, 0.9);
   content:"";
   top:0;
   bottom:0;
   left:0;
   z-index:99;
   right:0;
}
body.opens {
    overflow: hidden;
}
{% comment %} .gallery-popup.open {
  display: flex;
} {% endcomment %}
.gallery-popup.open .popup-inner {
    display: block;
}
.popup-inner {
    width: 90%;
    max-width: 736px;
    position: fixed;
    display: none;
    top: 50%;
    transform: translateY(-50%);
    z-index: 999;
    margin:0 auto;
    left:0;
    right:0;
}

.popup-slider img {
    width: 100%;
    height:480px;
    border-radius: 12px;
    aspect-ratio: 1;
    object-fit: cover;
}
.popup-close {
  position: absolute;
  top: -50px;
  right: -10px;
  font-size: 50px;
  color: #fff;
  background: none;
  border: none;
  cursor: pointer;
}

.popup-close:hover {
  color: #F76E2A;
}

.slick-prev:before, .slick-next:before {
  color: #fff;
  font-size: 30px;
}




.gallery-popup .slick-prev, .gallery-popup .slick-next {
    width: 55px;
    height: 55px;
    background: transparent;
    border-radius: 50%;
    backdrop-filter: blur(8px);
    display: flex !important;
    justify-content: center;
    align-items: center;
    z-index: 10;
    transition: all 0.3s ease;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    border: none;
    outline: none;
    font-size: 0;
    border: 1px solid #F76E2A;
    cursor:pointer;
}

/* Position them properly */
.gallery-popup .slick-prev {
  left: -70px;
}

.gallery-popup .slick-next {
