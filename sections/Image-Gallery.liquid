<section class="expanding-gallery">
  <div class="page-width">
    <div class="all-links-header">
      <div class="line-title">
        <hr>    
        <h2 class="all-links-title {% if settings.animations_reveal_on_scroll %}scroll-trigger animate--slide-in{% endif %}">
          {{ section.settings.top-heading }}
        </h2>    
        <hr>
      </div>  
    </div>      

    <div class="gallery-slider swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% if block.settings.image %}
            <div class="swiper-slide">
              <img
                src="{{ block.settings.image | img_url: 'master' }}"
                alt="{{ block.settings.alt_text | escape }}"
                loading="lazy"
              >
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Swiper Arrows -->
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    </div>
  </div>
</section>

<!-- Swiper JS CDN -->
<script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    new Swiper(".gallery-slider", {
      slidesPerView: 4,
      spaceBetween: 20,
      loop: true,
      autoplay: {
        delay: 2500,
        disableOnInteraction: false,
      },
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
      breakpoints: {
        320: { slidesPerView: 1.2, spaceBetween: 10 },
        640: { slidesPerView: 2.2, spaceBetween: 15 },
        1024: { slidesPerView: 4, spaceBetween: 20 },
      },
    });
  });
</script>

<style>
.expanding-gallery {
  padding: 60px 0;
  background: #fff;
}

.expanding-gallery .page-width {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 20px;
}

/* ---- Heading ---- */
.expanding-gallery .all-links-header .line-title {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15px;
  margin-bottom: 40px;
}

.expanding-gallery .all-links-header .line-title hr {
  width: 100px;
  background-color: #F76E2A;
  border: none;
  height: 3px;
}

.expanding-gallery .all-links-title {
  font-family: Oswald, sans-serif;
  font-weight: 700;
  font-size: 60px;
  text-transform: uppercase;
  color: #343434;
  margin: 0;
  text-align: center;
}

/* ---- Swiper Gallery ---- */
.gallery-slider {
  position: relative;
  width: 100%;
  padding-bottom: 40px;
}

.gallery-slider .swiper-slide {
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 4px 15px rgba(0,0,0,0.08);
  transition: transform 0.3s ease;
}

.gallery-slider .swiper-slide img {
  width: 100%;
  height: 400px;
  object-fit: cover;
  border-radius: 16px;
  transition: transform 0.4s ease;
}

.gallery-slider .swiper-slide:hover img {
  transform: scale(1.08);
}

/* ---- Arrows ---- */
.swiper-button-next,
.swiper-button-prev {
  color: #000;
  background: rgba(255,255,255,0.9);
  width: 50px;
  height: 50px;
  border-radius: 50%;
  box-shadow: 0 2px 8px rgba(0,0,0,0.15);
  transition: background 0.3s ease, transform 0.2s ease;
}

.swiper-button-next:hover,
.swiper-button-prev:hover {
  background: #000;
  color: #fff;
  transform: scale(1.1);
}

.swiper-button-next::after,
.swiper-button-prev::after {
  font-size: 18px;
}

/* ---- Responsive ---- */
@media (max-width: 1200px) {
  .expanding-gallery .all-links-title {
    font-size: 40px;
  }
  .gallery-slider .swiper-slide img {
    height: 320px;
  }
}

@media (max-width: 768px) {
  .expanding-gallery .all-links-title {
    font-size: 28px;
  }
  .gallery-slider .swiper-slide img {
    height: 250px;
  }
  .swiper-button-next,
  .swiper-button-prev {
    width: 35px;
    height: 35px;
  }
  .expanding-gallery .all-links-header .line-title hr {
    display: none;
  }
}
</style>

