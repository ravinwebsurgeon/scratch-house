<style>
.expanding-gallery {
  padding: 50px 0;
}
.expanding-gallery .page-width {
  max-width: 1400px;
  margin: 0 auto;
}
.expanding-gallery .gallery {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 15px;
}
.expanding-gallery .gallery img {
  width: 100%;
  height: 350px;
  object-fit: cover;
  border-radius: 12px;
  cursor: pointer;
  transition: transform 0.3s;
}
.expanding-gallery .gallery img:hover {
  transform: scale(1.03);
}
.expanding-gallery .all-links-header .line-title {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15px;
  margin-bottom: 30px;
}
.expanding-gallery .all-links-header .line-title hr {
  background-color: #F76E2A;
  width: 100px;
  height: 3px;
  border: none;
}
.expanding-gallery .all-links-header .all-links-title {
  font-family: Oswald;
  font-weight: 700;
  font-size: 48px;
  text-transform: uppercase;
  color: #343434;
  margin: 0;
}

/* Popup */
.gallery-popup {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.9);
  display: none;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}
.gallery-popup.active {
  display: flex;
}
.gallery-popup .popup-slider img {
  width: 80vw;
  max-height: 80vh;
  object-fit: contain;
  margin: 0 auto;
  border-radius: 10px;
}
.close-popup {
  position: absolute;
  top: 30px;
  right: 30px;
  background: #fff;
  color: #000;
  border: none;
  font-size: 28px;
  width: 45px;
  height: 45px;
  border-radius: 50%;
  cursor: pointer;
  box-shadow: 0 4px 10px rgba(0,0,0,0.3);
  transition: background 0.3s, transform 0.2s;
}
.close-popup:hover {
  background: #F76E2A;
  color: #fff;
  transform: rotate(90deg);
}

/* Slick arrows inside popup */
.gallery-popup .slick-prev, .gallery-popup .slick-next {
  background: rgba(255,255,255,0.8);
  width: 50px;
  height: 50px;
  border-radius: 50%;
  z-index: 10;
}
.gallery-popup .slick-prev:hover, .gallery-popup .slick-next:hover {
  background: #F76E2A;
}

/* Mobile: slick for main gallery */
@media(max-width: 768px) {
  .expanding-gallery .gallery {
    display: block;
  }
}
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // init slick for popup
    $('.popup-slider').slick({
      infinite: true,
      arrows: true,
      dots: false,
    });

    // init slick for gallery on mobile
    if (window.innerWidth < 768) {
      $('.gallery').slick({
        slidesToShow: 1,
        centerMode: true,
        centerPadding: '40px'
      });
    }

    // click image -> open popup
    document.querySelectorAll('.gallery-item img').forEach((img, index) => {
      img.addEventListener('click', () => {
        document.querySelector('.gallery-popup').classList.add('active');
        $('.popup-slider').slick('slickGoTo', index);
      });
    });

    // close popup
    document.querySelector('.close-popup').addEventListener('click', () => {
      document.querySelector('.gallery-popup').classList.remove('active');
    });

    // close on background click
    document.querySelector('.gallery-popup').addEventListener('click', (e) => {
      if (e.target.classList.contains('gallery-popup')) {
        document.querySelector('.gallery-popup').classList.remove('active');
      }
    });
  });
</script>

