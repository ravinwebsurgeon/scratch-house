<div class="cheese-tab-section">
  <div class="wrap-page-width">
    <div class="line-title">
      <hr>
      <h2 class="top-title">{{ section.settings.title }}</h2>
      <hr>
    </div>

    <div class="main-tabs page-width">
      <!-- Tabs -->
      <ul class="tabs">
        {% for tab_block in section.blocks %}
          <li data-tab="menu{{ forloop.index }}">{{ tab_block.settings.tab }}</li>
        {% endfor %}
      </ul>

      <!-- Tab Content -->
      {% for tab_block in section.blocks %}
        <div class="tab-content" id="menu{{ forloop.index }}">
          {% if tab_block.blocks.size > 0 %}
            <ul class="collection-list">
              {% for collection_block in tab_block.blocks %}
                {% if collection_block.settings.col %}
                  <li>{{ collection_block.settings.col.title }}</li>
                {% endif %}
              {% endfor %}
            </ul>
          {% else %}
            <p>No collections added to this tab.</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Tabbed Collections",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        {
          "type": "text",
          "id": "tab",
          "label": "Tab Title"
        },
        
      ]
      
      
    },
     {
          "type": "collection_item",
          "name": "Collection Item",
          "settings": [
            {
              "type": "collection",
              "id": "col",
              "label": "Choose Collection"
            }
          ]
        }
  ],
  "presets": [
    {
      "name": "Tabbed Collections",
      "category": "Collection"
    }
  ]
}
{% endschema %}

<script>
  $(function(){
    $(".tab-content:first").addClass("active");
    $(".tabs li:first").addClass("active");

    $(".tabs li").on("click", function(){
      var tabId = $(this).data("tab");
      $(".tabs li, .tab-content").removeClass("active");
      $(this).addClass("active");
      $("#" + tabId).addClass("active");
    });
  });
</script>

<style>
  .tabs { display:flex; list-style:none; padding:0; margin:0 0 20px; }
  .tabs li { margin-right:10px; cursor:pointer; padding:10px 20px; background:#f0f0f0; border:1px solid #ccc; border-radius:5px 5px 0 0; }
  .tabs li.active { background:#333; color:#fff; }
  .tab-content { display:none; padding:20px; border:1px solid #ccc; border-radius:0 0 5px 5px; }
  .tab-content.active { display:block; }
  .collection-list { list-style:none; padding:0; }
  .collection-list li { margin-bottom:10px; font-weight:bold; }
</style>
