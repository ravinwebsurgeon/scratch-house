<div class="cheese-tab-section">
  <div class="wrap-page-width">
    <div class="line-title">
      <hr>
      <h2 class="top-title">{{ section.settings.title }}</h2>
      <hr>
    </div>

    <div class="main-tabs page-width">
      <!-- Tabs -->
      <ul class="tabs">
        {% for block in section.blocks %}
          <li data-tab="menu{{ forloop.index }}">{{ block.settings.tab }}</li>
        {% endfor %}
      </ul>

      <!-- Tab Content: just the collection name -->
      {% for block in section.blocks %}
        <div class="tab-content" id="menu{{ forloop.index }}">
          {% if block.settings.col %}
            <h3 class="collection-title">{{ block.settings.col.title }}</h3>
          {% else %}
            <p>No collection selected.</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Tabbed Collections",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "collection_tab",
      "name": "Tab + Collection",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "tab",
          "label": "Tab Title"
        },
        {
          "type": "collection",
          "id": "col",
          "label": "Choose Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Tabbed Collections",
      "category": "Collection"
    }
  ]
}
{% endschema %}

<script>
  $(function(){
    $(".tab-content:first").addClass("active");
    $(".tabs li:first").addClass("active");

    $(".tabs li").on("click", function(){
      var tabId = $(this).data("tab");
      $(".tabs li, .tab-content").removeClass("active");
      $(this).addClass("active");
      $("#" + tabId).addClass("active");
    });
  });
</script>

<style>
  .tabs {
    display:flex;
    list-style:none;
    padding:0;
    margin:0 0 20px;
  }
  .tabs li {
    margin-right:10px;
    cursor:pointer;
    padding:10px 20px;
    background:#f0f0f0;
    border:1px solid #ccc;
    border-radius:5px 5px 0 0;
  }
  .tabs li.active {
    background:#333;
    color:#fff;
  }
  .tab-content {
    display:none;
    padding:20px;
    border:1px solid #ccc;
    border-radius:0 0 5px 5px;
  }
  .tab-content.active {display:block;}
</style>
