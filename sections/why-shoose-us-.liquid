<section class="why-choose-section">
  <div class="why-choose-inner">
    <!-- Left Content -->
    <div class="why-choose-left">
      {% if section.settings.subheading != blank %}
        <span class="why-subheading">{{ section.settings.subheading }}</span>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h2 class="why-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <p class="why-text">{{ section.settings.text }}</p>
      {% endif %}
    </div>

    <!-- Right Features -->
    <div class="why-choose-right">
      <div class="features-grid">
        {% for block in section.blocks %}
          <div class="feature-item">
            {% if block.settings.icon != blank %}
              <div class="feature-icon">
                {{ block.settings.icon }}
              </div>
            {% endif %}
            {% if block.settings.title != blank %}
              <h3 class="feature-title">{{ block.settings.title }}</h3>
            {% endif %}
            {% if block.settings.desc != blank %}
              <p class="feature-desc">{{ block.settings.desc }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
.why-choose-section {
  width: 100%;
  background: #fff;
  padding: 60px 0;
      max-width: 1440px;
    margin: 0 auto;
}

.why-choose-inner {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 40px;
}

.why-choose-left {
  flex: 1 1 40%;
}

.why-subheading {
  font-size: 14px;
  color:rgb(0, 0, 0);
  font-weight: 600;
  display: block;
  margin-bottom: 10px;
}

.why-heading {
  font-size: 36px;
  font-weight: 700;
  margin-bottom: 20px;
}

.why-text {
  font-size: 16px;
  line-height: 1.6;
  color: #555;
}

.why-choose-right {
  flex: 1 1 55%;
}

.features-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30px 40px;
}

.feature-item {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.feature-icon svg {
  width: 30px;
  height: 30px;
  fill:rgb(0, 0, 0);
}

.feature-title {
  font-size: 18px;
  font-weight: 600;
  margin: 0;
}

.feature-desc {
  font-size: 14px;
  color: #666;
  margin: 0;
}

/* Responsive */
@media(max-width: 991px) {
  .why-choose-inner {
    flex-direction: column;
  }
  .why-choose-left, 
  .why-choose-right {
    flex: 1 1 100%;
  }
  .features-grid {
    grid-template-columns: 1fr;
  }
}
</style>

{% schema %}
{
  "name": "Why Choose Us",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Why Choose Us"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Weâ€™re Your Best Choice"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Add your description here..."
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "html",
          "id": "icon",
          "label": "SVG Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "desc",
          "label": "Description",
          "default": "Feature description goes here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why Choose Us",
      "category": "Custom Sections",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}
