<section class="three-col-section {{ section.settings.content_alignment }}">
  <div class="container">
    <div class="three-col-grid">
      {% for block in section.blocks %}
        <div class="three-box">
          
          {% if block.type == 'image_block' %}
            {% if block.settings.image %}
              <div class="image-wrap">
                <img 
                  src="{{ block.settings.image | img_url: '720x' }}" 
                  alt="{{ block.settings.alt | escape }}" 
                  loading="lazy" 
                />
              </div>
            {% endif %}
          {% elsif block.type == 'text_block' %}
            <div class="mid-inner">
              {% if block.settings.heading != blank %}
                <h2 class="mid-heading">{{ block.settings.heading }}</h2>
              {% endif %}
              {% if block.settings.text != blank %}
                <div class="mid-text">{{ block.settings.text }}</div>
              {% endif %}
              {% if block.settings.show_button and block.settings.button_text != blank %}
                <a href="{{ block.settings.button_link }}" class="mid-button" role="button">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            </div>
          {% endif %}

        </div>
      {% endfor %}
    </div>
  </div>

  <style>
    .three-col-section { padding: 60px 0; }
    .three-col-section .container { max-width: 1200px; margin: 0 auto; padding: 0 16px; }
    .three-col-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 24px; align-items: center; }
    .three-box { display: flex; justify-content: center; align-items: center; text-align: center; }
    .three-col-grid .image-wrap img { width: 100%; max-width: 360px; border-radius: 8px; display: block; }
    .mid-inner { max-width: 520px; }
    .mid-heading { font-size: 32px; line-height: 1.2; margin-bottom: 16px; font-weight: 600; }
    .mid-text { font-size: 16px; line-height: 1.6; margin-bottom: 20px; }
    .mid-button { display: inline-block; padding: 12px 24px; border-radius: 6px; text-decoration: none; border: 1px solid #111; background: transparent; transition: 0.3s; }
    .mid-button:hover { background: #111; color: #fff; }

    .three-col-section.center .three-box { text-align: center; }
    .three-col-section.left .three-box { text-align: left; }
    .three-col-section.right .three-box { text-align: right; }

    @media (max-width: 768px) {
      .three-col-grid { grid-template-columns: 1fr; }
      .three-col-grid .image-wrap img { max-width: 280px; }
    }
  </style>
</section>

{% schema %}
{
  "name": "Custom Cooking",
  "settings": [
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content alignment",
      "options": [
        { "value": "center", "label": "Center" },
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Alt text",
          "default": "Image"
        }
      ]
    },
    {
      "type": "text_block",
      "name": "Text Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Your heading here"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text content",
          "default": "<p>Write your content here.</p>"
        },
        {
          "type": "checkbox",
          "id": "show_button",
          "label": "Show CTA button",
          "default": false
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Learn more"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Cooking",
      "category": "Custom",
      "blocks": [
        { "type": "image_block" },
        { "type": "text_block" },
        { "type": "image_block" }
      ]
    }
  ]
}
{% endschema %}

