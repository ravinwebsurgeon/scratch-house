<section class="three-col-section {{ section.settings.content_alignment }}">
  <div class="container">    
    <div class="all-links-header">
      <div class="line-title">
        <hr>    
        {% if section.settings.main-hed != blank %}
            <h2 class="all-links-title">{{ section.settings.main-hed }}</h2>
        {% endif %}
        <hr>
      </div>  
    </div>

    <div class="three-col-grid">
      {% for block in section.blocks %}
        <div class="three-box">
          
          {% if block.type == 'image_block' %}
            {% if block.settings.image %}
              <div class="image-wrap">
                <img 
                  src="{{ block.settings.image | img_url: '720x' }}" 
                  alt="{{ block.settings.alt | escape }}" 
                  loading="lazy" width="" height="" />
              </div>
            {% endif %}
          
          {% elsif block.type == 'text_block' %}
            <div class="mid-inner">
              {% if block.settings.heading != blank %}
                <h3 class="mid-heading">{{ block.settings.heading }}</h3>
              {% endif %}
              
              {% if block.settings.text != blank %}
                <div class="mid-text">{{ block.settings.text }}</div>
              {% endif %}
              
              {% if block.settings.show_button and block.settings.button_text != blank %}
                <a href="{{ block.settings.button_link }}" class="mid-button" role="button">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>

  <style>
    .three-col-section {padding:70px 0 0; background-color:#f76e2a; }
    .three-col-section .container { max-width: 100%; margin: 0 auto; padding: 0; }
    .three-col-section .three-col-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 24px; align-items: center; }
    .three-col-section .three-box { display: flex; justify-content: center; align-items: center; text-align: center;height:100%;}
    .three-col-grid .image-wrap img { width: 100%; max-width: 100%; border-radius: 0; display: block;height: 100%; object-fit: cover; aspect-ratio: 1;}
    .three-col-section .mid-inner { max-width: 520px;padding:20px 0;}
    .three-col-section .mid-heading { font-size: 28px; line-height: 1.1; margin-bottom: 16px; font-weight: 600;font-family: Oswald;}
    .three-col-section .mid-text { font-size: 16px; line-height: 1.6; margin-bottom: 20px;font-family: Oswald; }
    .three-col-section .mid-button { display: inline-block; padding: 12px 24px; border-radius: 6px; text-decoration: none; border: 1px solid #111; background: transparent; transition: 0.3s; }
    .three-col-section .mid-button:hover { background: #111; color: #fff; }
    .three-col-section .all-links-header {margin-bottom: 50px;}
    .three-col-section.center .three-box { text-align: center; }
    .three-col-section.left .three-box { text-align: left; }
    .three-col-section.right .three-box { text-align: right; }
    .three-box .image-wrap {width: 100%;height: 100%;}
  </style>
</section>

{% schema %}
{
  "name": "Custom Cooking",
  "settings": [
    {
      "type": "text",
      "id": "main-hed",
      "label": "Main Heading",
      "default": "Your heading here"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content alignment",
      "options": [
        { "value": "center", "label": "Center" },
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Alt text",
          "default": "Image"
        }
      ]
    },
    {
      "type": "text_block",
      "name": "Text Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Your heading here"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text content",
          "default": "<p>Write your content here.</p>"
        },
        {
          "type": "checkbox",
          "id": "show_button",
          "label": "Show CTA button",
          "default": false
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Learn more"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Cooking",
      "category": "Custom",
      "blocks": [
        { "type": "image_block" },
        { "type": "text_block" },
        { "type": "image_block" }
      ]
    }
  ]
}
{% endschema %}
