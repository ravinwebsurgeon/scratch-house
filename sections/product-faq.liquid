<section class="visit-faq-section" id="faqs">
  <div class="faq-container">
    <!-- Left Column -->
    <div class="faq-left">
      <h2 class="faq-heading1">{{ section.settings.heading }}</h2>
      <div class="faq-description">
     {{ section.settings.text }}
      </div>
    </div>
 
    <!-- Right Column -->
    <div class="faq-right">
      {% if product.metafields.custom.product_faq_questions and product.metafields.custom.product_faq_descriptions %}
        {% for question in product.metafields.custom.product_faq_questions.value %}
          {% assign answer = product.metafields.custom.product_faq_descriptions.value[forloop.index0] %}
          <div class="faq-item1">
            <button class="faq-question1">
              <span>{{ question }}</span>
              <span class="faq-icon">
                <!-- Simple Down Arrow SVG -->
                <svg class="faq-svg" width="20" height="20" viewBox="0 0 20 20" fill="none"
                  xmlns="http://www.w3.org/2000/svg">
                  <path d="M5 7.5L10 12.5L15 7.5" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
            </button>
            <div class="faq-answer1">
              <p>{{ answer }}</p>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>
 
<style>
.visit-faq-section {
    max-width: 1645px;
    margin: 100px auto 0;
    padding: 0 30px;
    width: 95%;
}
.faq-container {
  display: flex;
  gap: 209px;
  max-width: 100%;
  align-items: center;
}
.visit-faq-section .faq-left {
  max-width:500px;
  width:100%;
}
.faq-heading1 {
  font-family: Oswald;
    font-weight: 700;
    font-size: 60px;
    line-height: 70px;
    text-align: center;
    text-transform: uppercase;
    color: #343434;
    margin: 0;
}

button.faq-question1 span {
  font-family: Oswald;
    font-weight: 500;
    font-size: 25px;
    line-height: 30px;
    text-align: center;
    text-transform: capitalize;
    color: #343434;
}

.visit-faq-section .faq-right {
  max-width:900px;
  width:100%;
}

.faq-item1 {
  border-bottom: 1px solid #000;
    padding: 25px 0;
}
.faq-question1 {
    width: 100%;
    background: none;
    border: none;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0;
}
.faq-answer1 {
    display: none;
    overflow: hidden;
}
.faq-answer1 p {
    margin-bottom: 0;
    margin-top: 20px;
    font-family: Oswald;
    font-weight: 400;
    font-size: 16px;
    line-height: 27px;
    text-align: left;
    text-transform: capitalize;
    color: #343434;
}

.faq-item1.active .faq-svg {
  transform: rotate(180deg);
}
.faq-svg {
  transition: transform 0.3s ease;
}
</style>
 
<script>
$(document).ready(function () {
  $(".faq-question1").on("click", function () {
    const $item = $(this).closest(".faq-item1");
    const $answer = $item.find(".faq-answer1");
 
    // Toggle active state
    $item.toggleClass("active");
 
    // Slide the answer up/down
    $answer.stop(true, true).slideToggle(300);
 
    // Optionally rotate the single arrow SVG
    $item.find(".faq-svg").toggleClass("rotated");
  });
});
</script>
 
 
 
 
{% schema %}
{
  "name": "Product FAQ",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Description"
    }
  ],
  "presets": [
    {
      "name": "Product FAQ"
    }
  ]
}
{% endschema %}
 
 