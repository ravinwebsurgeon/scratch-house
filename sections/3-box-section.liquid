{% schema %}
{
  "name": "3 box Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Background Banner Image"
    },
    {
      "type": "header",
      "content": "Right Floating Box"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Box Image"
    },
    {
      "type": "text",
      "id": "right_heading",
      "label": "Right Box Heading",
      "default": "Delicious Pizza"
    },
    {
      "type": "url",
      "id": "right_button_link",
      "label": "Right Button Link"
    },
    {
      "type": "text",
      "id": "right_button_text",
      "label": "Right Button Text",
      "default": "Shop Collection"
    },
    {
      "type": "header",
      "content": "Left Slider Box"
    },
    {
      "type": "collection",
      "id": "slider_collection",
      "label": "Choose Collection for Slider"
    }
  ],
  "presets": [
    {
      "name": "3 Box section"
    }
  ]
}
{% endschema %}

<section class="about-banner-section">
  <div class="banner-frame">
    <!-- Background banner image -->
    {% if section.settings.banner_image != blank %}
      <img src="{{ section.settings.banner_image | img_url: 'master' }}" alt="Banner" class="banner-image">
    {% endif %}

    <!-- Left bottom product slider -->
    <div class="left-slider-box">
      <div class="product-slider">
        {% assign slider_collection = collections[section.settings.slider_collection] %}
        {% if slider_collection and slider_collection.products.size > 0 %}
          {% for product in slider_collection.products limit: 10 %}
            <div class="product-card">
              <div class="slick-imge-scroll">
              <img src="{{ product.featured_image | img_url: '300x300' }}" alt="{{ product.title }}">
              </div>
              <div class="slick-scroll-texts">
              <h4>{{ product.title }}</h4>
              <a href="{{ product.url }}" class="buy-btn">Buy Now</a>
              </div>
            </div>
          {% endfor %}
        {% else %}
          <p>No products found.</p>
        {% endif %}
      </div>
    </div>

    <!-- Right Floating Box -->
    <div class="right-floating-box">
      <div class="right-flos-img">
      {% if section.settings.right_image != blank %}
        <img src="{{ section.settings.right_image | img_url: '400x400' }}" alt="{{ section.settings.right_heading }}">
      {% endif %}
    </div>
    <div class="right-flos-texts">
      <h3>{{ section.settings.right_heading }}</h3>
      {% if section.settings.right_button_link != blank %}
        <a href="{{ section.settings.right_button_link }}" class="shop-btn">
          {{ section.settings.right_button_text }}
        </a>
      {% endif %}
    </div>
    </div>
  </div>
</section>

<style>
.about-banner-section {
     max-width: 1645px;
    margin: 100px auto 0;
    padding: 0 30px;
}

.banner-frame {
  position: relative;
  border-radius: 20px;
}

.banner-image {
      width: 85%;
    margin: 0 auto;
  height: auto;
  display: block;
  border-radius: 20px;
}

/* Left Slider Box */
.left-slider-box {
  position: absolute;
      bottom: -15%;
    left: -8px;
    width: 350px;
    background-color: #000;
  color: #fff;
  border-radius: 10px;
  padding: 20x;
  z-index: 1;
  box-shadow: 0px 6px 20px rgba(0,0,0,0.2);
}

/* Product Card in Slider */
.product-card {
  text-align: center;
  padding: 20px;
}

.slick-imge-scroll,.right-flos-img {
    position: relative;
    padding-bottom: 200px;
}

.slick-imge-scroll img, .right-floating-box img {
    width: 100%;
    max-width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    object-fit: contain;
    border-radius: 10px;
}

.slick-scroll-texts h4 {
    font-family: Oswald;
    font-weight: 500;
    font-size: 24px !important;
    line-height: 26px;
    text-align: center;
    text-transform: capitalize;
    color: #fff;
    margin: 0;
}

.product-card h4 {
  margin: 10px 0;
  font-size: 16px;
}
.buy-btn {
  display: inline-block;
  padding: 8px 16px;
  background: #ff6600;
  color: #fff;
  border-radius: 6px;
  text-decoration: none;
  transition: 0.3s;
  margin-top: 25px;
}
.buy-btn:hover {
  background: #cc5200;
}

/* Right Floating Box */
.right-floating-box {
  position: absolute;
 top: 11%;
    right: -25px;
    width: 350px;
  background: #000;
  color: #fff;
  border-radius: 12px;
  text-align: center;
  padding: 20px;
  z-index: 1;
  box-shadow: 0px 6px 20px rgba(0,0,0,0.2);
}

.right-floating-box h3 {
  margin: 15px 0 10px;
  font-size: 18px;
}
.shop-btn {
  display: inline-block;
  padding: 8px 16px;
  background: #ff6600;
  color: #fff;
  border-radius: 6px;
  text-decoration: none;
}
.shop-btn:hover {
  background: #cc5200;
}
</style>
<script>
document.addEventListener("DOMContentLoaded", function(){
  if (typeof $ !== "undefined" && $(".product-slider").length) {
    $(".product-slider").slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      arrows: false,
      dots: false,
      infinite: true,
      autoplay: true,
      autoplaySpeed: 3000,
      pauseOnHover: false,
      swipe: false
    });
  }
});
</script>