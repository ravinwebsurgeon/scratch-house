<section class="about-banner-section">
  <div class="banner-wrapper">
    <!-- Background banner image -->
    <img src="{{ 'your-banner-image.jpg' | asset_url }}" alt="Banner" class="banner-image">

    <!-- Left bottom product slider -->
    <div class="left-slider-box">
      <div class="product-slider">
        {% for product in collections.featured.products limit:5 %}
          <div class="product-card">
            <img src="{{ product.featured_image | img_url: '200x200' }}" alt="{{ product.title }}">
            <h4>{{ product.title }}</h4>
            <a href="{{ product.url }}" class="buy-btn">Buy Now</a>
          </div>
        {% endfor %}
      </div>
    </div>

    <!-- Right floating box -->
    <div class="right-floating-box">
      <img src="{{ 'pizza-sample.jpg' | asset_url }}" alt="Delicious Pizza">
      <h3>Delicious Pizza</h3>
      <a href="/collections/pizza" class="shop-btn">Shop Collection</a>
    </div>
  </div>
</section>
{% stylesheet %}
  .about-banner-section {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.banner-wrapper {
  position: relative;
  width: 100%;
}

.banner-image {
  width: 100%;
  height: auto;
  display: block;
}

/* Left Slider Box */
.left-slider-box {
  position: absolute;
  bottom: 30px;
  left: 30px;
  width: 280px;
  background: #111;
  color: #fff;
  border-radius: 10px;
  padding: 15px;
  z-index: 5;
  box-shadow: 0px 6px 20px rgba(0,0,0,0.2);
}

.product-card {
  text-align: center;
}
.product-card img {
  width: 100%;
  border-radius: 8px;
}
.product-card h4 {
  margin: 10px 0;
  font-size: 16px;
}
.buy-btn {
  display: inline-block;
  padding: 8px 16px;
  background: #ff6600;
  color: #fff;
  border-radius: 6px;
  text-decoration: none;
  transition: 0.3s;
}
.buy-btn:hover {
  background: #cc5200;
}

/* Right Floating Box */
.right-floating-box {
  position: absolute;
  top: 20%;
  right: 40px;
  width: 260px;
  background: #111;
  color: #fff;
  border-radius: 12px;
  text-align: center;
  padding: 20px;
  z-index: 5;
  box-shadow: 0px 6px 20px rgba(0,0,0,0.2);
}
.right-floating-box img {
  width: 100%;
  border-radius: 10px;
}
.right-floating-box h3 {
  margin: 15px 0 10px;
  font-size: 18px;
}
.shop-btn {
  display: inline-block;
  padding: 8px 16px;
  background: #ff6600;
  color: #fff;
  border-radius: 6px;
  text-decoration: none;
}
.shop-btn:hover {
  background: #cc5200;
}

{% endstylesheet %}
<script>
$(document).ready(function(){
  $('.product-slider').slick({
    slidesToShow: 1,
    slidesToScroll: 1,
    arrows: false,
    dots: false,
    infinite: true,
    autoplay: true,
    autoplaySpeed: 3000,
    pauseOnHover: false,
    swipe: false
  });
});
</script>
