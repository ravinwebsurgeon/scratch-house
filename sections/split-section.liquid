<section class="split-banner-section">
  <div class="split-banner-inner">
    <!-- Left Image -->
    <div class="split-bnn-sec">
    <div class="split-banner-image">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | image_url: width: 1000 }}" alt="Banner Image">
      {% endif %}
    </div>
  </div>

    <!-- Right Text -->
    <div class="split-banner-content">
      {% if section.settings.heading != blank %}
        <h2 class="split-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <p class="split-text">{{ section.settings.text }}</p>
      {% endif %}
    </div>
  </div>
</section>

<style>
.split-banner-section {
  width: 100%;
}

.split-banner-inner {
  display: flex;
  align-items: center;
  width: 100%;
  background-color: #343434;
}

.split-banner-image img {
    display: block;
    width: 100%;
    max-width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    object-fit: cover;
}

.split-banner-inner > div {
    width: 50%;
    max-width: 50%;
}

.split-banner-content {
    padding: 0 70px;
    display: flex;
    flex-direction: column;
    gap: 25px;
}

.split-banner-image {
    position: relative;
    padding-bottom: 700px;
}

h2.split-heading {
    color: #fff;
    margin: 0;
    font-family: Oswald;
    font-weight: 700;
    font-size: 40px;
    line-height: 50px;
    text-transform: uppercase;
}

p.split-text {
    font-family: Oswald;
    font-weight: 300;
    font-size: 20px;
    line-height: 30px;
    color: #fff;
    margin: 0;
    max-width: 700px;
}

</style>

{% schema %}
{
  "name": "Split Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Left Side Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "BKIND"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "At BKIND, we offer all-natural, plant-based, vegan, eco-friendly beauty and skin care products..."
    }
  ],
  "presets": [
    {
      "name": "Split section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
