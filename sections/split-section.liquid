<section class="split-banner-section {{ section.settings.layout }}">
  <div class="split-banner-inner">
    <!-- Left Image -->
    <div class="split-banner-image">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | image_url: width: 1000 }}" alt="Banner Image">
      {% endif %}
    </div>

    <!-- Right Text -->
    <div class="split-banner-content">
      {% if section.settings.heading != blank %}
        <h2 class="split-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <p class="split-text">{{ section.settings.text }}</p>
      {% endif %}
    </div>
  </div>
</section>

<style>
.split-banner-section {
  display: flex;
  justify-content: center;
  margin: 50px auto;
  max-width: 1100px; /* not full width */
  border: 2px solid #e5e5e5;
  border-radius: 12px;
  background: #fff;
  overflow: hidden;
}

.split-banner-inner {
  display: flex;
  flex-wrap: wrap;
  align-items: stretch;
  width: 100%;
}

/* Default: image left, text right */
.split-banner-image, 
.split-banner-content {
  flex: 1 1 50%;
  min-height: 400px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.split-banner-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.split-banner-content {
  padding: 60px;
  background: #fdf7f2;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.split-heading {
  font-size: 36px;
  font-weight: 700;
  margin-bottom: 20px;
  color: #222;
}

.split-text {
  font-size: 18px;
  line-height: 1.7;
  color: #444;
}

/* Reverse layout */
.split-banner-section.reverse .split-banner-image {
  order: 2;
}

.split-banner-section.reverse .split-banner-content {
  order: 1;
}

/* Responsive */
@media(max-width: 991px) {
  .split-banner-inner {
    flex-direction: column;
  }
  .split-banner-image, 
  .split-banner-content {
    flex: 1 1 100%;
    min-height: 300px;
  }
  .split-banner-content {
    padding: 40px 20px;
  }
}
</style>

{% schema %}
{
  "name": "Split Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Left Side Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "BKIND"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "At BKIND, we offer all-natural, plant-based, vegan, eco-friendly beauty and skin care products..."
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout Style",
      "default": "normal",
      "options": [
        {
          "value": "normal",
          "label": "Normal (Image Left, Text Right)"
        },
        {
          "value": "reverse",
          "label": "Reversed (Image Right, Text Left)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Split section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
