<section class="split-banner-section">
  <div class="split-banner-inner">
    <!-- Left Image -->
    <div class="split-banner-image">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | image_url: width: 1000 }}" alt="Banner Image">
      {% endif %}
    </div>

    <!-- Right Text -->
    <div class="split-banner-content">
      {% if section.settings.heading != blank %}
        <h2 class="split-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <p class="split-text">{{ section.settings.text }}</p>
      {% endif %}
    </div>
  </div>
</section>

<style>
.split-banner-section {
  width: 100%;
  background: #f9f9f9;
}

.split-banner-inner {
  display: flex;
  flex-wrap: wrap;
  align-items: stretch;
  width: 100%;
}

.split-banner-image, 
.split-banner-content {
  flex: 1 1 50%;
  min-height: 400px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.split-banner-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.split-banner-content {
  padding: 60px;
  background: #fdf7f2; /* light aesthetic bg */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.split-heading {
  font-size: 32px;
  font-weight: 700;
  margin-bottom: 20px;
}

.split-text {
  font-size: 18px;
  line-height: 1.6;
  margin-bottom: 25px;
  color: #333;
}


/* Responsive */
@media(max-width: 991px) {
  .split-banner-inner {
    flex-direction: column;
  }
  .split-banner-image, 
  .split-banner-content {
    flex: 1 1 100%;
    min-height: 300px;
  }
  .split-banner-content {
    padding: 40px 20px;
  }
}
</style>

{% schema %}
{
  "name": "Split Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Left Side Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "BKIND"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "At BKIND, we offer all-natural, plant-based, vegan, eco-friendly beauty and skin care products..."
    }
  ],
  "presets": [
    {
      "name": "Split section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
