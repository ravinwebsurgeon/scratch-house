<section class="split-banner-section">
  <div class="split-banner-inner">
    <!-- Left Image -->
    <div class="split-bnn-sec">
    <div class="split-banner-image">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | image_url: width: 1000 }}" alt="Banner Image">
      {% endif %}
    </div>
  </div>

    <!-- Right Text -->
    <div class="split-banner-content">
      {% if section.settings.heading != blank %}
        <h2 class="split-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <p class="split-text">{{ section.settings.text }}</p>
      {% endif %}
    </div>
  </div>
</section>

<style>
.split-banner-section {
  width: 100%;
}

.split-banner-inner {
  display: flex;
  align-items: center;
  width: 100%;
  background-color: #343434;
}

</style>

{% schema %}
{
  "name": "Split Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Left Side Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "BKIND"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "At BKIND, we offer all-natural, plant-based, vegan, eco-friendly beauty and skin care products..."
    }
  ],
  "presets": [
    {
      "name": "Split section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
