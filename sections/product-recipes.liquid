<div class="two-column-section">
  <div class="two-col-wrapper">

    <!-- Left Side Image -->
    <div class="two-col-left">
      {% if product.metafields.custom.left_image != blank %}
        <img 
          src="{{ product.metafields.custom.left_image | img_url: '600x' }}" 
          alt="{{ product.title }}" 
          loading="lazy">
      {% endif %}
    </div>

    <!-- Right Side Features -->
    <div class="two-col-right">
      {% if product.metafields.custom.features != blank %}
        {% for feature in product.metafields.custom.features %}
          <div class="feature-item">
            {% if feature.icon != blank %}
              <div class="feature-icon">
                <img src="{{ feature.icon | img_url: '100x' }}" alt="{{ feature.title }}" loading="lazy">
              </div>
            {% endif %}
            <div class="feature-content">
              {% if feature.title != blank %}
                <h3 class="feature-heading">{{ feature.title }}</h3>
              {% endif %}
              {% if feature.desc != blank %}
                <p class="feature-desc">{{ feature.desc }}</p>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Product Recipes",
  "settings": [],
  "presets": [
    {
      "name": "Product Recipes"
    }
  ]
}
{% endschema %}
