<section class="why-choose-section">
  <div class="why-choose-inner">
    <!-- Left Content -->
    <div class="why-choose-left">
      {% if section.settings.subheading != blank %}
        <span class="why-subheading">{{ section.settings.subheading }}</span>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h2 class="why-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <p class="why-text">{{ section.settings.text }}</p>
      {% endif %}
    </div>

    <!-- Right Features -->
    <div class="why-choose-right">
      <div class="features-grid">
        {% for block in section.blocks %}
          <div class="feature-item">
            {% if block.settings.icon != blank %}
              <div class="feature-icon">
                {{ block.settings.icon }}
              </div>
            {% endif %}
            {% if block.settings.title != blank %}
              <h3 class="feature-title">{{ block.settings.title }}</h3>
            {% endif %}
            {% if block.settings.desc != blank %}
              <p class="feature-desc">{{ block.settings.desc }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
.why-choose-section {
     padding: 100px 30px;
    max-width: 1440px;
    margin: 0 auto;
}

.why-choose-inner {
  display: flex;
  align-items: center;
  gap: 40px;
}

.why-choose-left {
  width: 45%;
}

.why-choose-right {
  width: 55%;
}

.features-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30px 40px;
}

.feature-icon svg {
  width: 50px;
  height: 50px;
}

.why-choose-left h2.why-heading {
    font-family: Oswald;
    font-weight: 700;
    font-size: 40px;
    line-height: 50px;
    text-transform: capitalize;
    color: #343434;
    margin: 0;
}

.why-choose-left p.why-text {
    margin: 20px 0 0;
    font-family: Oswald;
    font-weight: 300;
    font-size: 20px;
    line-height: 30px;
    max-width: 490px;
    color: #343434;
}

.why-choose-right h3.feature-title {
    margin: 0;
    font-family: Oswald;
    font-weight: 700;
    font-size: 22px;
    line-height: 31px;
    text-transform: capitalize;
    color: #343434;
    margin: 0;
}

.why-choose-right p.feature-desc {
    margin: 0;
    font-family: Oswald;
    font-weight: 300;
    font-size: 18px;
    line-height: 25px;
    text-transform: capitalize;
    max-width: 420px;
    color: #343434;
}

.why-choose-right .feature-icon {
    width: 50px;
    height: 50px;
    display: block;
}

.why-choose-right .feature-item {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.why-choose-right .feature-icon svg path {
    fill: #f76e2a;
}

/* Responsive */
@media(max-width: 991px) {
  .why-choose-inner {
    flex-direction: column;
  }
  .why-choose-left, 
  .why-choose-right {
    flex: 1 1 100%;
  }
  .features-grid {
    grid-template-columns: 1fr;
  }
}
</style>

{% schema %}
{
  "name": "Why Choose Us",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Why Choose Us"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Weâ€™re Your Best Choice"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Add your description here..."
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "html",
          "id": "icon",
          "label": "SVG Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "desc",
          "label": "Description",
          "default": "Feature description goes here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why Choose Us",
      "category": "Custom Sections",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}
