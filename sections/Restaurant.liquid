<!-- Swiper CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css">

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>

<section class="hero-consulting-slider">
  <div class="hero-slider swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide hero-consulting"
          style="background-image: url({{ block.settings.bg_image | img_url: 'master' }});">
          <div class="hero-inner page-width">
            <h2>{{ block.settings.heading }}</h2>
            <p>{{ block.settings.text }}</p>

            {% if block.settings.button_label != blank %}
              <a href="{{ block.settings.button_link }}" class="btn-get-started">
                {{ block.settings.button_label }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- Slider controls -->
    <div class="swiper-pagination"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
</section>

{% schema %}
{
  "name": "Restaurant Hero Slider",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "bg_image",
          "label": "Background image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Restaurant Consulting Services"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Alana, along with his team, offers culinary and management services..."
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Get Started"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Restaurant Hero Slider",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.hero-consulting-slider {
  position: relative;
}
.hero-consulting-slider .hero-consulting {
  position: relative;
  display: flex;
  align-items: center;
  min-height: 480px;
  color: #fff;
  background-size: cover;
  background-position: center;
  text-align: center;
}
.hero-consulting::before {
  content: "";
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.45);
}
.hero-inner.page-width {
  position: relative;
  max-width: 800px;
  z-index: 1;
  width: 100%;
}
.hero-inner h2 {
  font-family: Oswald;
  font-weight: 700;
  font-size: 60px;
  text-transform: uppercase;
  margin: 0;
  color: #fff;
  line-height: 1.1;
}
.hero-inner p {
  color: #fff;
  font-family: Oswald;
  font-weight: 400;
  font-size: 18px;
  line-height: normal;
  text-transform: capitalize;
  margin: 10px 0 0;
}
.btn-get-started {
  transition: background .3s;
  background-color: #f76e2a;
  border-radius: 10px;
  padding: 12px 30px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin-top: 30px;
  color: #fff;
  text-decoration: none;
  font-family: Oswald;
  font-weight: 500;
  font-size: 20px;
  line-height: normal;
  text-align: center;
  text-transform: uppercase;
}
.hero-consulting-slider .swiper-pagination-bullet{
   background-color: #fff;
   width:12px;
   height: 12px;
   opacity: 0.6;
}
.hero-consulting-slider .swiper-pagination-bullet-active{
  background-color: #f76e2a;
  opacity: 1;
}
.btn-get-started:hover {
  background: #fff;
  color: #000;
}

/* Swiper overrides */
.swiper-button-next,
.swiper-button-prev {
  color: #fff;
}
.swiper-pagination-bullet {
  background: #fff;
}

@media(max-width:1439px){
  .hero-inner h2 {
    font-size: 42px;
   }
   .btn-get-started { 
    font-size: 18px;
  }
}



{% endstylesheet %}

{% javascript %}
document.addEventListener("DOMContentLoaded", function() {
  new Swiper('.hero-slider', {
    loop: true,
    autoplay: { delay: 2000 },
    pagination: { el: '.swiper-pagination', clickable: true },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev'
    }
  });
});
{% endjavascript %}

