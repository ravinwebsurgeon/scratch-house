{% schema %}
{
  "name": "Catering Menus",
  "settings": [
    { "type": "inline_richtext", "id": "top-heading", "label": "Top Heading" },
    { "type": "inline_richtext", "id": "para", "label": "Intro Paragraph" },
    { "type": "url", "id": "btn_link", "label": "Main Button URL" },
    { "type": "text", "id": "btn_text", "label": "Main Button Text" }
  ],
  "blocks": [
    {
      "type": "link_block",
      "name": "Image & Text Block",
      "settings": [
        { "type": "image_picker", "id": "custom_image", "label": "Block Image" },
       
        { "type": "text", "id": "block_title", "label": "Block Heading" },
        { "type": "text", "id": "block_desc", "label": "Button Text", "default":"View Menu" },
        { "type": "url", "id": "block_link", "label": "Block Button/Link URL" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Catering Menus",
      "blocks": [
        { "type": "link_block" },
        { "type": "link_block" },
        { "type": "link_block" }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}

.all-links-image-text button.slick-arrow svg {
    width: 20px;
    height: 24px;
    display: block;
    cursor: pointer;
}

.all-links-image-text button.slick-arrow svg path {
    fill: #F76E2A;
}

.all-links-image-text button.slick-arrow {
    padding: 0;
    cursor: pointer;
    border: 1px solid #F76E2A;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    position: absolute;
    top: 50%;
    z-index: 1;
    background-color: transparent;
    transform: translateY(-50%);
    background-color: #fff;
}

.all-links-image-text button.slick-next.custom-next.slick-arrow {
    right:-10px;
}

.all-links-image-text button.slick-prev.custom-prev.slick-arrow {
    left:-10px;
}


.all-links-item .certing-butn a {
    background-color: #f76e2a;
    border-radius: 5px;
    padding: 4px 9px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    text-decoration: none;
    font-family: Oswald;
    font-weight: 500;
    font-size: 18px;
    line-height: 27px;
    text-align: center;
}

.all-links-image-wrapper img {
    width: 100%;
    max-width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 20px;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;

}

section.all-links-image-text.page-width {
    max-width: 1645px;
    margin: 0 auto;
    padding: 100px 30px 0;
}

.all-links-header .line-title hr {
    margin: 0;
    background-color: #F76E2A;
    width: 100px;
}

.all-links-header .line-title {
    display: flex;
    align-items: center;
    gap: 15px;
    justify-content: center;
}

.all-links-header  .line-title .all-links-title {
    font-family: Oswald;
    font-weight: 700;
    font-size: 60px;
    line-height: 65px;
    text-align: center;
    text-transform: uppercase;
    color: #343434;
    margin: 0;
}

.all-links-image-wrapper::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    border-radius: 20px;
    z-index: 1;
    opacity: 30%;
}

.all-links-item {
    position: relative;
    padding: 0 10px;
}

.all-links-content {
    position: absolute;
    bottom: 20px;
    width: 90%;
    margin: 0 auto;
    background-color: #fff;
    z-index: 1;
    border-radius: 10px;
    left: 0;
    right: 0;
}

.all-link-flex {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px 15px;
}

h3.all-links-block-title {
    margin: 0;
    font-family: Oswald;
    font-weight: 500;
    font-size: 18px;
    line-height: 20px;
    color: #343434;
    text-transform: uppercase;
}

.all-links-grid {
  /* display: grid;
  grid-template-columns: repeat(4,1fr);
  gap: 40px 30px; */
  margin-top: 70px;
  margin-left: -10px;
}

.all-links-image-wrapper {
  position: relative;
      padding-bottom: 400px;
}
.all-links-badge {
  position: absolute;
  top: 10px;
  left: 10px;
  background: #000;
  color: #fff;
  padding: 0.3rem 0.6rem;
  font-size: 0.8rem;
  border-radius: 4px;
}

{% endstylesheet %}
