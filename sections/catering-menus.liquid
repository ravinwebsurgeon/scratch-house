{% comment %}
  Section: All Links â€“ Image & Text
{% endcomment %}
<section class="all-links-image-text page-width">
  <div class="all-links-header">
    <div class="line-title">
      <hr>
    {% if section.settings.top-heading != blank %}
      <h2 class="all-links-title">
        {{ section.settings.top-heading }}
      </h2>
    {% endif %}
    <hr>
  </div>

    {% if section.settings.para != blank %}
      <p class="all-links-intro">
        {{ section.settings.para }}
      </p>
    {% endif %}

    <div class="certing-butn">
    {% if section.settings.btn_link != blank and section.settings.btn_text != blank %}
      <a href="{{ section.settings.btn_link }}" class="all-links-main-btn btn">
        {{ section.settings.btn_text }}
      </a>
    {% endif %}
  </div>
  </div>

  <div class="all-links-grid">
    {% for block in section.blocks %}
      {% if block.type == 'link_block' %}
        <div class="all-links-item">
          {% if block.settings.custom_image != blank %}
            <div class="all-links-image-wrapper">
              <img
                src="{{ block.settings.custom_image | img_url:'master' }}"
                alt="{{ block.settings.block_title | escape }}"
                loading="lazy"
              >
              
            </div>
          {% endif %}

          <div class="all-links-content">
            <div class="all-link-flex">
            {% if block.settings.block_title != blank %}
              <h3 class="all-links-block-title">
                {{ block.settings.block_title }}
              </h3>
            {% endif %}

            {% if block.settings.block_desc != blank  %}
              <a href="{{ block.settings.block_link }}" class="all-links-block-btn btn-link">
                {{ block.settings.block_desc }}
              </a>
            {% endif %}
          </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Catering Menus",
  "settings": [
    { "type": "inline_richtext", "id": "top-heading", "label": "Top Heading" },
    { "type": "inline_richtext", "id": "para", "label": "Intro Paragraph" },
    { "type": "url", "id": "btn_link", "label": "Main Button URL" },
    { "type": "text", "id": "btn_text", "label": "Main Button Text" }
  ],
  "blocks": [
    {
      "type": "link_block",
      "name": "Image & Text Block",
      "settings": [
        { "type": "image_picker", "id": "custom_image", "label": "Block Image" },
       
        { "type": "text", "id": "block_title", "label": "Block Heading" },
        { "type": "text", "id": "block_desc", "label": "Button Text", "default":"View Menu" },
        { "type": "url", "id": "block_link", "label": "Block Button/Link URL" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Catering Menus",
      "blocks": [
        { "type": "link_block" },
        { "type": "link_block" },
        { "type": "link_block" }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}

.all-links-image-wrapper img {
    width: 100%;
    max-width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 20px;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;

}

section.all-links-image-text.page-width {
    max-width: 1645px;
    margin: 0 auto;
    padding: 100px 30px;
}

.all-links-image-text {
  padding: 3rem 1rem;
}

.all-links-header .line-title hr {
    margin: 0;
    background-color: #F76E2A;
    width: 100px;
}

.all-links-header .line-title {
    display: flex;
    align-items: center;
    gap: 15px;
    justify-content: center;
}

.all-links-header  .line-title .all-links-title {
    font-family: Oswald;
    font-weight: 700;
    font-size: 60px;
    line-height: 65px;
    text-align: center;
    text-transform: uppercase;
    color: #343434;
    margin: 0;
}

.all-links-image-wrapper::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    border-radius: 20px;
    z-index: 1;
    opacity: 40%;
}

.all-links-item {
    position: relative;
}

.all-links-content {
    position: absolute;
    bottom: 20px;
    width: 94%;
    background-color: #fff;
    z-index: 1;
    border-radius: 10px;
    left: 10px;
    right: 10px;
}

.all-link-flex {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px 15px;
}

h3.all-links-block-title {
    margin: 0;
    font-family: Oswald;
    font-weight: 500;
    font-size: 18px;
    line-height: 20px;
    color: #343434;
    text-transform: uppercase;
}

.all-links-grid {
  display: grid;
  grid-template-columns: repeat(4,1fr);
  gap: 40px 30px;
  margin-top: 70px;
}
.all-links-image-wrapper {
  position: relative;
      padding-bottom: 400px;
}
.all-links-badge {
  position: absolute;
  top: 10px;
  left: 10px;
  background: #000;
  color: #fff;
  padding: 0.3rem 0.6rem;
  font-size: 0.8rem;
  border-radius: 4px;
}

{% endstylesheet %}
