<section class="combo-board-special">
  <div class="container">
    <div class="line-title" data-aos="fade-down">
      <hr>
      <h2 class="top-title">{{ section.settings.title }}</h2>
      <hr>
    </div>
    <div class="combo-board-content">
        <div class="combo-board-texts">
      <div class="combo-board-text" data-aos="zoom-in">
        <h3>{{ section.settings.heading }}</h3>
        <p>{{ section.settings.subheading }}</p>
        <div class="button-combo-board">
        {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <a href="{{ section.settings.button_link }}" class="btn-combo-board">
            {{ section.settings.button_label }}
          </a>
        {% endif %}
        </div>
      </div>
      </div>
      <div class="combo-board-img">
      <div class="combo-board-image">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.heading }}">
        {% endif %}
      </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Combo Board Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Top Title"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Right Side Image"
    }
  ],
  "presets": [
    {
      "name": "Combo Board Section"
    }
  ]
}
{% endschema %}
