{% schema %}
{
  "name": "Portfolio Gallery",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Middle Item Title",
      "default": "Passion fruit mousse cake"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Middle Item Link"
      
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Gallery Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "max_blocks": 5,
  "presets": [
    {
      "name": "Portfolio Gallery",
      "category": "Custom",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}

<section class="portfolio-gallery">
  <div class="portfolio-wrapper">
    {% for block in section.blocks %}
      <div class="portfolio-item {% if forloop.index == 3 %}portfolio-center{% endif %}">
        {% if block.settings.image != blank %}
          <img src="{{ block.settings.image | img_url: '800x' }}" alt="Gallery Image {{ forloop.index }}">
        {% endif %}
        {% if forloop.index == 3 %}
          <div class="portfolio-caption">
            <span class="portfolio-label">Portfolio</span>
            <h3>{{ section.settings.heading }}</h3>
            <a class="read-more" href="{{ section.settings.link }}">Read More â†’</a>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

<style>
.portfolio-gallery {
  padding: 40px 0;
}
.portfolio-wrapper {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 20px;
  align-items: stretch;
}
.portfolio-item {
  position: relative;
  overflow: hidden;
}
.portfolio-item img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  border-radius: 6px;
}
.portfolio-center {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.portfolio-caption {
  padding: 15px;
  background: #fff;
  margin-top: 10px;
  text-align: center;
}
.portfolio-label {
  font-size: 12px;
  text-transform: uppercase;
  color: #777;
  letter-spacing: 1px;
}
.portfolio-caption h3 {
  font-size: 18px;
  margin: 8px 0;
}
.read-more {
  font-size: 14px;
  text-decoration: none;
  color: #111;
  border-bottom: 1px solid transparent;
  transition: border-color 0.3s;
}
.read-more:hover {
  border-color: #111;
}
@media (max-width: 768px) {
  .portfolio-wrapper {
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  }
}
</style>
