<section class="holiday-special">
  <div class="container">
    <h2 class="top-title">{{ section.settings.title }}</h2>
    <div class="holiday-content">
      <div class="holiday-text">
        <h3>{{ section.settings.heading }}</h3>
        <p>{{ section.settings.subheading }}</p>
        {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <a href="{{ section.settings.button_link }}" class="btn-holiday">
            {{ section.settings.button_label }}
          </a>
        {% endif %}
      </div>
      <div class="holiday-image">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.heading }}">
        {% endif %}
      </div>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Holiday Special Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Top Title"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Right Side Image"
    }
  ],
  "presets": [
    {
      "name": "Holiday Special Section"
    }
  ]
}
{% endschema %}