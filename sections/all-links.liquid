<div class="collections page-width">
  <h2 class="al-text {% if settings.animations_reveal_on_scroll %}scroll-trigger animate--slide-in{% endif %}">
    {{ section.settings.top-heading }}
  </h2>
  <p class="collectonng-pggf {% if settings.animations_reveal_on_scroll %}scroll-trigger animate--slide-in{% endif %}">
    {{ section.settings.para }}
  </p>

  <div id="collections-content-{{ section.id }}" class="block-ddggfj">
    {% for block in section.blocks %}
      <div class="coll-cont {% if settings.animations_reveal_on_scroll %}scroll-trigger animate--slide-in{% endif %}">
        <a href="{{ block.settings.block_link }}">
          <div class="collection">
            <div class="collection-titled">
              {% if block.settings.badge != blank %}
                <div class="collection-bbage">
                  <p class="collection-badge-text">{{ block.settings.badge }}</p>
                </div>
              {% endif %}
              <h3 class="collection-title">{{ block.settings.block_title }}</h3>
              {% if block.settings.block_desc != blank %}
                <p class="collection-desc">{{ block.settings.block_desc }}</p>
              {% endif %}
            </div>

            <div class="collection-ddcon">
              {% if block.settings.custom_image %}
                <img src="{{ block.settings.custom_image | img_url: 'master' }}" alt="{{ block.settings.block_title }}">
              {% endif %}
            </div>
          </div>
        </a>
      </div>
    {% endfor %}
  </div>

  {% if section.settings.btn_text != blank %}
    <div class="collection-button {% if settings.animations_reveal_on_scroll %}scroll-trigger animate--slide-in{% endif %}">
      <a href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}</a>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "All Links – Image & Text",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "top-heading",
      "label": "Top Heading"
    },
    {
      "type": "inline_richtext",
      "id": "para",
      "label": "Intro Paragraph"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Main Button URL"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Main Button Text"
    }
  ],
  "blocks": [
    {
      "type": "link_block",
      "name": "Image & Text Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "custom_image",
          "label": "Block Image"
        },
        {
          "type": "text",
          "id": "badge",
          "label": "Optional Badge Text"
        },
        {
          "type": "text",
          "id": "block_title",
          "label": "Block Heading"
        },
        {
          "type": "textarea",
          "id": "block_desc",
          "label": "Block Description"
        },
        {
          "type": "url",
          "id": "block_link",
          "label": "Block Button/Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "All Links – Image & Text",
      "blocks": [
        { "type": "link_block" },
        { "type": "link_block" },
        { "type": "link_block" }
      ]
    }
  ]
}
{% endschema %}


