{% comment %}
  Dynamic Recipe/Blog Card Slider Section
  Each block = image + title + text + button
{% endcomment %}

<section class="custom-recipe-slider">
    <div class="recipe-page-width">
     <div class="line-title">
      <hr>
      <h2 class="top-title">{{ section.settings.title }}</h2>
      <hr>
    </div>
  <div class="recipe-slider">
    {% for block in section.blocks %}
      <div class="recipe-card" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          <div class="recipe-image">
            <img src="{{ block.settings.image | img_url: '600x' }}" alt="{{ block.settings.title | escape }}">
          </div>
        {% endif %}
        <div class="recipe-content">
          {% if block.settings.title != blank %}
            <h3>{{ block.settings.title }}</h3>
          {% endif %}
          {% if block.settings.text != blank %}
            <p>{{ block.settings.text }}</p>
          {% endif %}
          {% if block.settings.button_label != blank %}
            <a href="{{ block.settings.button_link }}" class="recipe-btn">{{ block.settings.button_label }}</a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
  </div>
</section>

<script>
$(document).ready(function(){
  $('.recipe-slider').slick({
    slidesToShow: 4,
    slidesToScroll: 1,
    arrows: true,
    dots: false,
    infinite: true,
    autoplay: false,
    responsive: [
      {
        breakpoint: 1024,
        settings: {
          slidesToShow: 3
        }
      },
      {
        breakpoint: 768,
        settings: {
          slidesToShow: 2
        }
      },
      {
        breakpoint: 480,
        settings: {
          slidesToShow: 1
        }
      }
    ]
  });
});
</script>

<style>
.custom-recipe-slider {
     padding: 69px 0;
    background-color: #F5F5F5;
    margin-top: 100px;
}
.recipe-card {
  background: #fff;
  border-radius: 12px;
  overflow: hidden;
  text-align: center;
  padding: 15px;
}
.recipe-image img {
  width: 100%;
  border-radius: 12px;
}
.recipe-content h3 {
  font-size: 18px;
  margin: 15px 0 10px;
  font-weight: 600;
}
.recipe-content p {
  font-size: 14px;
  color: #555;
  margin-bottom: 15px;
}
.recipe-btn {
  display: inline-block;
  padding: 10px 20px;
  background: #ff5722;
  color: #fff;
  font-weight: bold;
  text-decoration: none;
  border-radius: 6px;
  transition: 0.3s;
}
.recipe-btn:hover {
  background: #e64a19;
}
.slick-prev:before,
.slick-next:before {
  color: #ff5722;
  font-size: 28px;
}
</style>

{% schema %}
{
  "name": "Recipe Product",
  "settings": [
    {
    "type": "text",
    "id": "title",
    "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "recipe_block",
      "name": "Recipe Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Recipe Product",
      "category": "Custom"
    }
  ]
}
{% endschema %}
