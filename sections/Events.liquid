{% schema %}
{
  "name": "Next Events",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Next events"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Intro Text",
      "default": "Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium."
    }
  ],
  "blocks": [
    {
      "type": "event",
      "name": "Event",
      "settings": [
        { "type": "number", "id": "day", "label": "Day", "default": 18 },
        { "type": "text", "id": "month", "label": "Month", "default": "February" },
        { "type": "number", "id": "year", "label": "Year", "default": 2024 },
        { "type": "text", "id": "title", "label": "Event Title", "default": "Cooking classes" },
        { "type": "text", "id": "location", "label": "Location", "default": "Apple Upper West Side, Brooklyn" },
        { "type": "text", "id": "time", "label": "Time Range", "default": "10:15 a.m. ‚Äì 11:15 a.m." },
        { "type": "text", "id": "badge_text", "label": "Badge Text (e.g. Buy Tickets / Free Event / Sold Out)", "default": "Buy Tickets" },
        {
          "type": "select",
          "id": "badge_style",
          "label": "Badge Style",
          "default": "button",
          "options": [
            { "value": "button", "label": "Button" },
            { "value": "label", "label": "Text Label" }
          ]
        },
        { "type": "url", "id": "badge_link", "label": "Badge Link" },
        { "type": "image_picker", "id": "event_image", "label": "Event Image" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Next Events",
      "category": "Custom",
      "blocks": [
        { "type": "event" },
        { "type": "event" },
        { "type": "event" }
      ]
    }
  ]
}
{% endschema %}

<section class="next-events">
  <div class="page-width">
    <h2>{{ section.settings.heading }}</h2>
    <p class="events-intro">{{ section.settings.subtext }}</p>

    <div class="events-list">
      {% for block in section.blocks %}
  {% assign is_even = forloop.index0 | modulo: 2 %}
  <div class="event-row {% if is_even == 0 %}odd{% else %}even{% endif %}">
    {% if block.settings.event_image %}
      <div class="event-image">
        <img src="{{ block.settings.event_image | img_url: 'medium' }}" alt="{{ block.settings.title }}">
      </div>
    {% endif %}

    <div class="event-date">
      <span class="day">{{ block.settings.day }}</span>
      <span class="month">{{ block.settings.month }},</span>
      <span class="year">{{ block.settings.year }}</span>
    </div>

    <div class="event-info">
      <h3 class="title">{{ block.settings.title }}</h3>
      <p class="location">üìç {{ block.settings.location }}</p>
      <p class="time">‚è∞ {{ block.settings.time }}</p>
    </div>

    <div class="event-action">
      {% if block.settings.badge_text != blank %}
        {% if block.settings.badge_style == "button" %}
          <a href="{{ block.settings.badge_link }}" class="badge-button">{{ block.settings.badge_text }}</a>
        {% else %}
          <span class="badge-label">{{ block.settings.badge_text }}</span>
        {% endif %}
      {% endif %}
    </div>
  </div>
{% endfor %}


    </div>
  </div>
</section>

<style>
.next-events {
  font-family: "Georgia", serif;
  color: #111;
  padding: 60px 0;
}
.events-intro {
  font-size: 16px;
  color: #555;
  margin-bottom: 30px;
}
.events-list {
  display: flex;
  flex-direction: column;
  gap: 20px;
}
.event-row {
  display: flex;
  align-items: center;
  gap: 20px;
  padding: 20px;
  border-radius: 10px;
  background: #f9f9f9;
  transition: transform 0.3s, background 0.3s;
}
.event-row:hover {
  transform: translateY(-5px);
  background: #eee;
}
.event-row.even {
  flex-direction: row-reverse;
}
.event-image img {
  width: 100px;
  height: 100px;
  object-fit: cover;
  border-radius: 10px;
}
.event-date {
  text-align: center;
  font-size: 14px;
  min-width: 80px;
}
.event-date .day {
  font-size: 34px;
  font-weight: bold;
}
.event-info .title {
  font-size: 20px;
  margin-bottom: 5px;
}
.event-info .location,
.event-info .time {
  font-size: 14px;
  color: #555;
  margin: 2px 0;
}
.event-action {
  margin-left: auto;
}
.badge-button {
  background: #b00;
  color: #fff;
  padding: 8px 16px;
  border-radius: 30px;
  text-decoration: none;
  font-size: 14px;
  transition: background 0.3s;
}
.badge-button:hover { background: #800; }
.badge-label {
  font-size: 14px;
  color: #b00;
  font-style: italic;
}
@media (max-width: 992px) {
  .event-row, .event-row.even {
    flex-direction: column;
    align-items: flex-start;
  }
  .event-action { margin-left: 0; margin-top: 10px; }
  .event-image img { width: 100%; max-width: 100%; margin-bottom: 10px; }
}
</style>
