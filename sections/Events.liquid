{% schema %}
{
  "name": "Next Events",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Next events"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Intro Text",
      "default": "Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium."
    }
  ],
  "blocks": [
    {
      "type": "event",
      "name": "Event",
      "settings": [
        { "type": "number", "id": "day", "label": "Day", "default": 18 },
        { "type": "text", "id": "month", "label": "Month", "default": "February" },
        { "type": "number", "id": "year", "label": "Year", "default": 2024 },
        { "type": "text", "id": "title", "label": "Event Title", "default": "Cooking classes" },
        { "type": "text", "id": "location", "label": "Location", "default": "Apple Upper West Side, Brooklyn" },
        { "type": "text", "id": "time", "label": "Time Range", "default": "10:15 a.m. ‚Äì 11:15 a.m." },
        { "type": "text", "id": "badge_text", "label": "Badge Text (e.g. Buy Tickets / Free Event / Sold Out)", "default": "Buy Tickets" },
        {
          "type": "select",
          "id": "badge_style",
          "label": "Badge Style",
          "default": "button",
          "options": [
            { "value": "button", "label": "Button" },
            { "value": "label", "label": "Text Label" }
          ]
        },
        { "type": "url", "id": "badge_link", "label": "Badge Link" },
        { "type": "image_picker", "id": "event_image", "label": "Event Image" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Next Events",
      "category": "Custom",
      "blocks": [
        { "type": "event" },
        { "type": "event" },
        { "type": "event" }
      ]
    }
  ]
}
{% endschema %}

<section class="next-events">
  <div class="page-width">
    <h2>{{ section.settings.heading }}</h2>
    <p class="events-intro">{{ section.settings.subtext }}</p>

    <div class="events-list">
      {% for block in section.blocks %}
  {% assign is_even = forloop.index0 | modulo: 2 %}
  <div class="event-row {% if is_even == 1 %}even-row{% endif %}">
    {% if block.settings.event_image %}
    <div class="event-image">
      <img src="{{ block.settings.event_image | img_url: 'medium' }}" alt="{{ block.settings.title }}">
    </div>
    {% endif %}

    <div class="event-content">
      <div class="event-date">
        <span class="day">{{ block.settings.day }}</span>
        <span class="month">{{ block.settings.month }},</span>
        <span class="year">{{ block.settings.year }}</span>
      </div>

      <div class="event-info">
        <h3 class="title">{{ block.settings.title }}</h3>
        <p class="location">üìç {{ block.settings.location }}</p>
        <p class="time">‚è∞ {{ block.settings.time }}</p>
      </div>

      <div class="event-action">
        {% if block.settings.badge_text != blank %}
          {% if block.settings.badge_style == "button" %}
            <a href="{{ block.settings.badge_link }}" class="badge-button">{{ block.settings.badge_text }}</a>
          {% else %}
            <span class="badge-label">{{ block.settings.badge_text }}</span>
          {% endif %}
        {% endif %}
      </div>
    </div>
  </div>
{% endfor %}

    </div>
  </div>
</section>

<style>
.next-events {
  font-family: "Georgia", serif;
  color: #111;
  padding: 60px 0;
}
.events-intro {
  font-size: 16px;
  color: #555;
  margin-bottom: 30px;
}
.events-list {
  display: flex;
  flex-direction: column;
  gap: 20px;
}
.event-row.even-row {
  flex-direction: row-reverse;
}
.event-row.even-row .event-date {
    margin: 0 -20px 0 0;
}
.event-row {
  display: flex;
  align-items: center;
  gap: 0;
  padding: 20px;
  border-radius: 10px;
  background: #f9f9f9;
  transition: transform 0.3s, background 0.3s;
}
.event-row:hover {
  transform: translateY(-5px);
  background: #eee;
}
.next-events .event-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 10px;
  aspect-ratio: 1;
}
.next-events .event-date span {
    display: block;
    line-height: normal;
    color: #fff;
    font-family: 'Oswald';
    text-transform: uppercase;
    line-height: 1.1;
}
section.next-events .page-width {
    max-width: 1645px;
    margin: 0 auto;
    padding: 0 30px;
}
.next-events .event-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: calc(100% - 28%);
  justify-content: space-between;
}
.event-row.even-row .event-content .event-action {
  margin-right: auto;
}

.event-row.even-row .event-content .event-info {
  flex: inherit;
}
.next-events .event-date {
  text-align: center;
  font-size: 14px;
  display: flex;
  flex-direction: column;
  background-color: #f76e2a;
  padding: 10px;
  border-radius: 5px;
  margin: 0 0 0 -20px;
  width: 104px;
  position: relative;
}
.event-row.even-row .event-content {
    flex-direction: row-reverse;
}
.event-date .day {
  font-size: 34px;
  font-weight: bold;
  margin-bottom: 10px;
}
.event-info {
  flex-grow: 1;
  padding: 0 20px;
}
.event-info .title {
  font-size: 20px;
  margin-bottom: 5px;
}
.event-info .location,
.event-info .time {
  font-size: 14px;
  color: #555;
  margin: 2px 0;
}
.event-action {
  flex-shrink: 0;
}
.badge-button {
  background: #b00;
  color: #fff;
  padding: 8px 16px;
  border-radius: 30px;
  text-decoration: none;
  font-size: 14px;
  transition: background 0.3s;
}
.badge-button:hover { background: #800; }
.badge-label {
  font-size: 14px;
  color: #b00;
  font-style: italic;
}
.next-events .event-row .event-image {
  width: 28%;
}
</style>
