{% schema %}
{
  "name": "Next Events",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Next events"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Intro Text",
      "default": "Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium."
    }
   
   
  ],
  "blocks": [
    {
      "type": "event",
      "name": "Event",
      "settings": [
        { "type": "number", "id": "day", "label": "Day", "default": 18 },
        { "type": "text", "id": "month", "label": "Month", "default": "February" },
        { "type": "number", "id": "year", "label": "Year", "default": 2024 },
        { "type": "text", "id": "title", "label": "Event Title", "default": "Cooking classes" },
        { "type": "text", "id": "location", "label": "Location", "default": "Apple Upper West Side, Brooklyn" },
        { "type": "text", "id": "time", "label": "Time Range", "default": "10:15 a.m. ‚Äì 11:15 a.m." },
        { "type": "text", "id": "badge_text", "label": "Badge Text (e.g. Buy Tickets / Free Event / Sold Out)", "default": "Buy Tickets" },
        {
          "type": "select",
          "id": "badge_style",
          "label": "Badge Style",
          "default": "button",
          "options": [
            { "value": "button", "label": "Button" },
            { "value": "label", "label": "Text Label" }
          ]
        },
        { "type": "url", "id": "badge_link", "label": "Badge Link" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Next Events",
      "category": "Custom",
      "blocks": [
        { "type": "event" },
        { "type": "event" },
        { "type": "event" }
      ]
    }
  ]
}
{% endschema %}

<section class="next-events">
  <div class="page-width">
    <header class="events-header">
      <div>
        
        <h2>{{ section.settings.heading }}</h2>
        <p class="events-intro">{{ section.settings.subtext }}</p>


      </div>
     
    </header>

    <div class="events-list">
      {% for block in section.blocks %}
        <div class="event-row">
          <div class="event-date">
            <span class="day">{{ block.settings.day }}</span>
            <span class="month">{{ block.settings.month }},</span>
            <span class="year">{{ block.settings.year }}</span>
          </div>
          <div class="event-info">
            <h3 class="title">{{ block.settings.title }}</h3>
            <p class="location">üìç {{ block.settings.location }}</p>
            <p class="time">üìç{{ block.settings.time }}</p>
          </div>
          <div class="event-action">
            {% if block.settings.badge_text != blank %}
              {% if block.settings.badge_style == "button" %}
                <a href="{{ block.settings.badge_link }}" class="badge-button">{{ block.settings.badge_text }}</a>
              {% else %}
                <span class="badge-label">{{ block.settings.badge_text }}</span>
              {% endif %}
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.next-events {
  padding: 60px 0;
  font-family: "Georgia", serif;
  color: #111;
}
.events-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 20px;
  border-bottom: 1px solid #000;
  margin-bottom: 30px;
}
.events-label {
  text-transform: uppercase;
  font-size: 12px;
  letter-spacing: 1px;
  color: #666;
  margin-bottom: 6px;
}
.events-intro {
  max-width: 400px;
  font-size: 15px;
  color: #444;
}
.view-all {
  text-decoration: none;
  font-size: 14px;
  color: #111;
}
.events-list {
  display: flex;
  flex-direction: column;
  gap: 20px;
}
.event-row {
  display: grid;
  grid-template-columns: 80px 1fr auto;
  align-items: center;
  border-bottom: 1px solid #e0e0e0;
  padding: 20px 0;
}
.event-date {
  text-align: center;
  font-size: 14px;
  line-height: 1.3;
}
.event-date .day {
  display: block;
  font-size: 34px;
  font-weight: bold;
}
.event-info .title {
  font-size: 20px;
  margin-bottom: 6px;
}
.event-info .location,
.event-info .time {
  font-size: 14px;
  color: #555;
  margin: 2px 0;
}
.badge-button {
  background: #111;
  color: #fff;
  padding: 8px 16px;
  border-radius: 30px;
  text-decoration: none;
  font-size: 14px;
  transition: background 0.3s;
}
.badge-button:hover { background: #333; }
.badge-label {
  font-size: 14px;
  color: #b66;
  font-style: italic;
}
@media (max-width: 768px) {
  .event-row {
    grid-template-columns: 60px 1fr;
    grid-template-rows: auto auto;
  }
  .event-action { margin-top: 10px; }
}
</style>
