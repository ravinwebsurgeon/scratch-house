<section class="custom-video-section">
    <div class="reviews-page-width">
    <div class="title-arrows" data-aos="fade-down">
    <div class="line-title">
      <hr>
      <h2 class="top-title">{{ section.settings.title }}</h2>
      <hr>
    </div>

      <div class="review-arrows">
      <div class="review-prev-slide slick-arrow">
       <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640"><path d="M169.4 297.4C156.9 309.9 156.9 330.2 169.4 342.7L361.4 534.7C373.9 547.2 394.2 547.2 406.7 534.7C419.2 522.2 419.2 501.9 406.7 489.4L237.3 320L406.6 150.6C419.1 138.1 419.1 117.8 406.6 105.3C394.1 92.8 373.8 92.8 361.3 105.3L169.3 297.3z"/></svg>
      </div>
      <div class="review-next-slide slick-arrow">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640"><path d="M471.1 297.4C483.6 309.9 483.6 330.2 471.1 342.7L279.1 534.7C266.6 547.2 246.3 547.2 233.8 534.7C221.3 522.2 221.3 501.9 233.8 489.4L403.2 320L233.9 150.6C221.4 138.1 221.4 117.8 233.9 105.3C246.4 92.8 266.7 92.8 279.2 105.3L471.2 297.3z"/></svg>
      </div>
    </div>

    </div>
  <div class="video-section" data-aos="zoom-in">
    {% for block in section.blocks %}
      <div class="video-card" {{ block.shopify_attributes }}>
        <div class="video-wrapper">
          {% if block.settings.thumbnail != blank %}
            <img src="{{ block.settings.thumbnail | img_url: 'master' }}" class="video-thumbnail" alt="Video Thumbnail">
          {% endif %}

          <button class="play-btn">
            <img src="https://cdn.shopify.com/s/files/1/0774/9376/4347/files/Play_Button.png?v=1757567413">
          </button>

          {% if block.settings.video != blank %}
            {{ block.settings.video | video_tag: controls: false, autoplay: false, muted: false, loop: false, class: "video-element" }}
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
  </div>
</section>


<style>

@Media (max-width: 767px){

  .custom-video-section .review-arrows .slick-arrow svg path {
    fill: #F76E2A;
}

.custom-video-section .review-arrows .slick-arrow {
    padding: 0;
    border: 1px solid #F76E2A;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    z-index: 1;
    background-color: transparent;
}

.custom-video-section .review-arrows .slick-arrow svg {
    width: 14px;
    height: 14px;
}

.custom-video-section .title-arrows {
    display: flex;
    align-items: center;
    justify-content: space-between;
            padding-right: 25px;
}

.custom-video-section .review-arrows {
    display: flex;
    gap: 5px;
}

}

</style>


<script>
$(document).ready(function(){
  $(".play-btn").on("click", function(){
    var wrapper = $(this).closest(".video-wrapper");
    var video = wrapper.find("video")[0];

    // Add a class to remove overlay via CSS
    wrapper.addClass("playing");

    // Hide thumbnail + play button
    wrapper.find(".video-thumbnail, .play-btn").hide();

    // Show and play video
    $(video).show();
    video.play();
  });
});
</script>

<script>
$(document).ready(function() {
  var $slider = $('.video-section');

  function initMobileSlick() {
    if ($(window).width() <= 767) {
      if (!$slider.hasClass('slick-initialized')) {
        $slider.slick({
          slidesToShow: 1.5,
          slidesToScroll: 1,
          dots: false,
          arrows: false, // disable default arrows
          autoplay: true,
          autoplaySpeed: 3000,
          infinite: false
        });

        // custom arrows
        $('.review-prev-slide').on('click', function(){
          $slider.slick('slickPrev');
        });
        $('.review-next-slide').on('click', function(){
          $slider.slick('slickNext');
        });
      }
    } else {
      if ($slider.hasClass('slick-initialized')) {
        $slider.slick('unslick');
      }
    }
  }

  // Run on load
  initMobileSlick();

  // Run on resize
  $(window).on('resize', function() {
    initMobileSlick();
  });
});
</script>

<style>

    .video-wrapper {
  position: relative;
}

.video-wrapper::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.3); /* overlay effect */
  border-radius: 12px;
  z-index: 1;
  transition: opacity 0.5s ease;
}

body .video-wrapper.playing::before {
  opacity: 0;
  pointer-events: none;
}

    .custom-video-section .line-title hr {
    margin: 0;
    background-color: #FFD600;
    width: 100px;
}

.custom-video-section .line-title {
    display: flex;
    align-items: center;
    gap: 15px;
    justify-content: center;
}

.custom-video-section .line-title .top-title {
    font-family: Oswald;
    font-weight: 700;
    font-size: 60px;
    line-height: 65px;
    text-align: center;
    text-transform: uppercase;
    color: #343434;
    margin: 0;
}

.custom-video-section .reviews-page-width {
    max-width: 1645px;
    padding: 100px 30px 0;
    margin: 0 auto;
}

.video-section {
  display: flex;
  gap: 40px;
  justify-content: center;
      width: 100%;
      margin-top: 50px;
}
.video-card {
  position: relative;
  border-radius: 30px;
  overflow: hidden;
      width: 100%;
}
.video-wrapper {
  position: relative;
  width: 100%;
     padding-bottom: 600px;
         cursor: pointer;
}
.video-thumbnail {
    width: 100%;
    display: block;
    border-radius: 30px;
    max-width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    object-fit: cover;
}
.video-element {
    width: 100%;
    display: none;
    border-radius: 30px;
    max-width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    object-fit: cover;
}

.custom-video-section button.play-btn {
    position: absolute;
    z-index: 1;
    background-color: transparent;
    border: 0;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    cursor: pointer;
}

.custom-video-section button.play-btn img {
    width: 60px;
    height: 60px;
    cursor: pointer;
}

</style>

