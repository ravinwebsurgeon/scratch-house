<section class="custom-video-section">
    <div class="reviews-page-width">
         <div class="line-title">
      <hr>
      <h2 class="top-title">{{ section.settings.title }}</h2>
      <hr>
    </div>
  <div class="video-section">
    {% for block in section.blocks %}
      <div class="video-card" {{ block.shopify_attributes }}>
        <div class="video-wrapper">
          {% if block.settings.thumbnail != blank %}
            <img src="{{ block.settings.thumbnail | img_url: 'master' }}" class="video-thumbnail" alt="Video Thumbnail">
          {% endif %}

          <button class="play-btn">
            <img src="https://cdn.shopify.com/s/files/1/0774/9376/4347/files/Play_Button.png?v=1757567413">
          </button>

          {% if block.settings.video != blank %}
            {{ block.settings.video | video_tag: controls: false, autoplay: false, muted: false, loop: false, class: "video-element" }}
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
  </div>
</section>

<script>
$(document).ready(function(){
  $(".play-btn").on("click", function(){
    var wrapper = $(this).closest(".video-wrapper");
    var video = wrapper.find("video")[0];

    // Hide thumbnail + play button
    wrapper.find(".video-thumbnail, .play-btn").hide();

    // Show and play video
    $(video).show();
    video.play();
  });
});
</script>

<style>

    .custom-video-section .line-title hr {
    margin: 0;
    background-color: #F76E2A;
    width: 100px;
}

.custom-video-section .line-title {
    display: flex;
    align-items: center;
    gap: 15px;
    justify-content: center;
}

.custom-video-section .line-title .top-title {
    font-family: Oswald;
    font-weight: 700;
    font-size: 60px;
    line-height: 65px;
    text-align: center;
    text-transform: uppercase;
    color: #343434;
    margin: 0;
}

.custom-video-section .reviews-page-width {
    max-width: 1645px;
    padding: 100px 30px 0;
    margin: 0 auto;
}

.video-section {
  display: flex;
  gap: 40px;
  justify-content: center;
      width: 100%;
      margin-top: 50px;
}
.video-card {
  position: relative;
  border-radius: 12px;
  overflow: hidden;
      width: 100%;
}
.video-wrapper {
  position: relative;
  width: 100%;
     padding-bottom: 600px;
}
.video-thumbnail {
    width: 100%;
    display: block;
    border-radius: 12px;
    max-width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    object-fit: cover;
}
.video-element {
    width: 100%;
    display: none;
    border-radius: 12px;
    max-width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    object-fit: cover;
}
.play-btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 28px;
  color: #fff;
  background: rgba(0,0,0,0.5);
  border: none;
  border-radius: 50%;
  width: 50px;
  height: 50px;
  cursor: pointer;
}
</style>

{% schema %}
{
  "name": "Customer Review",
  "settings": [
    {
    "type": "text",
    "id": "title",
    "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "video_block",
      "name": "Video Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "thumbnail",
          "label": "Thumbnail Image"
        },
        {
          "type": "video",
          "id": "video",
          "label": "Upload Video"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Customer Review",
      "category": "Media"
    }
  ]
}
{% endschema %}
