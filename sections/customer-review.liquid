<section class="custom-video-section">
    <div class="reviews-page-width">
         <div class="line-title">
      <hr>
      <h2 class="top-title">{{ section.settings.title }}</h2>
      <hr>
    </div>
  <div class="video-section">
    {% for block in section.blocks %}
      <div class="video-card" {{ block.shopify_attributes }}>
        <div class="video-wrapper">
          {% if block.settings.thumbnail != blank %}
            <img src="{{ block.settings.thumbnail | img_url: 'master' }}" class="video-thumbnail" alt="Video Thumbnail">
          {% endif %}

          <button class="play-btn">
            <img src="https://cdn.shopify.com/s/files/1/0774/9376/4347/files/Play_Button.png?v=1757567413">
          </button>

          {% if block.settings.video != blank %}
            {{ block.settings.video | video_tag: controls: false, autoplay: false, muted: false, loop: false, class: "video-element" }}
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
  </div>
</section>


<style>

@Media (max-width: 767px){

  .custom-video-section .video-section button.slick-arrow svg path {
    fill: #F76E2A;
}

.custom-video-section .video-section button.slick-arrow {
    padding: 0;
    border: 1px solid #F76E2A;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    position: absolute;
    top: -47px;
    z-index: 1;
    background-color: transparent;
}

.custom-video-section .video-section button.slick-next.custom-next.slick-arrow {
    right: 25px;
}

.custom-video-section .video-section button.slick-prev.custom-prev.slick-arrow {
    right: 16%;
}

.custom-video-section .video-section button.slick-arrow svg {
    width: 14px;
    height: 14px;
}

}

</style>


<script>
$(document).ready(function(){
  $(".play-btn").on("click", function(){
    var wrapper = $(this).closest(".video-wrapper");
    var video = wrapper.find("video")[0];

    // Add a class to remove overlay via CSS
    wrapper.addClass("playing");

    // Hide thumbnail + play button
    wrapper.find(".video-thumbnail, .play-btn").hide();

    // Show and play video
    $(video).show();
    video.play();
  });
});
</script>

<script>
$(document).ready(function() {
  var $slider = $('.insta-all-posts');

  function initMobileSlick() {
    if ($(window).width() <= 767) {
      if (!$slider.hasClass('slick-initialized')) {
        $slider.slick({
          slidesToShow: 2,
          slidesToScroll: 1,
          dots: false,
          arrows: false, // disable default arrows
          autoplay: true,
          autoplaySpeed: 3000,
          infinite: false
        });

        // custom arrows
        $('.review-prev-slide').on('click', function(){
          $slider.slick('slickPrev');
        });
        $('.review-next-slide').on('click', function(){
          $slider.slick('slickNext');
        });
      }
    } else {
      if ($slider.hasClass('slick-initialized')) {
        $slider.slick('unslick');
      }
    }
  }

  // Run on load
  initMobileSlick();

  // Run on resize
  $(window).on('resize', function() {
    initMobileSlick();
  });
});
</script>

<style>

    .video-wrapper {
  position: relative;
}

.video-wrapper::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.3); /* overlay effect */
  border-radius: 12px;
  z-index: 1;
  transition: opacity 0.5s ease;
}

body .video-wrapper.playing::before {
  opacity: 0;
  pointer-events: none;
}

    .custom-video-section .line-title hr {
    margin: 0;
    background-color: #F76E2A;
    width: 100px;
}

.custom-video-section .line-title {
    display: flex;
    align-items: center;
    gap: 15px;
    justify-content: center;
}

.custom-video-section .line-title .top-title {
    font-family: Oswald;
    font-weight: 700;
    font-size: 60px;
    line-height: 65px;
    text-align: center;
    text-transform: uppercase;
    color: #343434;
    margin: 0;
}

.custom-video-section .reviews-page-width {
    max-width: 1645px;
    padding: 100px 30px 0;
    margin: 0 auto;
}

.video-section {
  display: flex;
  gap: 40px;
  justify-content: center;
      width: 100%;
      margin-top: 50px;
}
.video-card {
  position: relative;
  border-radius: 30px;
  overflow: hidden;
      width: 100%;
}
.video-wrapper {
  position: relative;
  width: 100%;
     padding-bottom: 600px;
         cursor: pointer;
}
.video-thumbnail {
    width: 100%;
    display: block;
    border-radius: 30px;
    max-width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    object-fit: cover;
}
.video-element {
    width: 100%;
    display: none;
    border-radius: 30px;
    max-width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    object-fit: cover;
}

.custom-video-section button.play-btn {
    position: absolute;
    z-index: 1;
    background-color: transparent;
    border: 0;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    cursor: pointer;
}

.custom-video-section button.play-btn img {
    width: 60px;
    height: 60px;
    cursor: pointer;
}

</style>

