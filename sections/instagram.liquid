<div class="wrapper-insta-section">
  <div class="insta-page-width">
    <div class="line-title">
      <hr>
      <h2 class="top-title">{{ section.settings.title }}</h2>
      <hr>
    </div>

    <div class="insta-all-posts">
      {% for block in section.blocks %}
        <div class="insta-under-images">
          <div class="insta-image">
            <img src="{{ block.settings.img | img_url:'master' }}">
          </div>
          <div class="insta-icon">
            <img src="{{ block.settings.icon | img_url:'master' }}">
          </div>        
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Instagram Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Instagram Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "img",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Instagram Section"
    }
  ]
}
{% endschema %}
