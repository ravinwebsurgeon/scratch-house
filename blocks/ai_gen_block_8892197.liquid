{% doc %}
  @prompt
    gift cards
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-gift-card-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-gift-card-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: center;
  }

  .ai-gift-card-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-gift-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-gift-card-image-placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    width: 100%;
    aspect-ratio: 4 / 3;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-gift-card-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
  }

  .ai-gift-card-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-gift-card-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .ai-gift-card-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: 1.2;
  }

  .ai-gift-card-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
  }

  .ai-gift-card-amounts-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
  }

  .ai-gift-card-amount-{{ ai_gen_id }} {
    padding: 12px 24px;
    background-color: {{ block.settings.amount_bg_color }};
    color: {{ block.settings.amount_text_color }};
    border: 1px solid {{ block.settings.amount_border_color }};
    border-radius: {{ block.settings.amount_border_radius }}px;
    font-size: 16px;
    font-weight: 500;
    text-align: center;
    min-width: 100px;
  }

  .ai-gift-card-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 32px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
    align-self: flex-start;
  }

  .ai-gift-card-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-gift-card-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    .ai-gift-card-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-gift-card-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-gift-card-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }

    .ai-gift-card-amounts-{{ ai_gen_id }} {
      gap: 8px;
    }

    .ai-gift-card-amount-{{ ai_gen_id }} {
      padding: 10px 20px;
      font-size: 14px;
      min-width: 80px;
    }

    .ai-gift-card-button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<div class="ai-gift-card-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-gift-card-container-{{ ai_gen_id }}">
    <div class="ai-gift-card-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 800 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          class="ai-gift-card-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-gift-card-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-gift-card-empty-state-{{ ai_gen_id }}">
            Next, add a gift card image
          </div>
        </div>
      {% endif %}
    </div>

    <div class="ai-gift-card-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-gift-card-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-gift-card-description-{{ ai_gen_id }}">
          {{ block.settings.description }}
        </div>
      {% endif %}

      {% if block.settings.show_amounts %}
        <div class="ai-gift-card-amounts-{{ ai_gen_id }}">
          {% if block.settings.amount_1 != blank %}
            <div class="ai-gift-card-amount-{{ ai_gen_id }}">{{ block.settings.amount_1 }}</div>
          {% endif %}
          {% if block.settings.amount_2 != blank %}
            <div class="ai-gift-card-amount-{{ ai_gen_id }}">{{ block.settings.amount_2 }}</div>
          {% endif %}
          {% if block.settings.amount_3 != blank %}
            <div class="ai-gift-card-amount-{{ ai_gen_id }}">{{ block.settings.amount_3 }}</div>
          {% endif %}
          {% if block.settings.amount_4 != blank %}
            <div class="ai-gift-card-amount-{{ ai_gen_id }}">{{ block.settings.amount_4 }}</div>
          {% endif %}
        </div>
      {% endif %}

      {% if block.settings.button_text != blank and block.settings.button_link != blank %}
        <a href="{{ block.settings.button_link }}" class="ai-gift-card-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

